/*!
 * ulike-scroll-list
 */
.ulike-scroll-list {
    position: relative;
    min-height: 100vh;

    .scroll-list-section {
        display: flex;
        width: 100%;

        @media (max-width: 767.99px) {
            .page-width & {
                margin-left: calc(var(--page-padding) * -1);
                margin-right: calc(var(--page-padding) * -1);
                width: auto;
                padding-inline: var(--page-padding);

                .title-wrapper {
                    margin-block-start: clamp(var(--sp-8), 2.526vw, var(--sp-12));
                }
            }
        }

        @media (min-width: 768px) {
            background-color: #edf8f8;
        }

        z-index: 0;

        .content {
            position: relative;

            @media (min-width: 768px) {
                width: 50%;
                padding: 10% 5% 10%;
            }

            @media (min-width: 1200px) {
                padding: 10% 10% 10% 0;
            }

            .footnote {
                font-size: 12px;
                margin-top: 2rem;
            }

            .content-inner {
                position: relative;
                width: 100%;

                @media (min-width: 768px) {
                    padding: 0em 0em 3em 0;
                }

                &.first {
                    padding-left: 0;
                }

                .content-wrapper {
                    transition: opacity 0.5s ease;
                    padding: 0 0 2em;
                    display: flex;
                    flex-direction: column;
                    opacity: 0.2;

                    @media (min-width: 768px) {
                        padding: 0;
                        opacity: 0.2;
                    }

                    .image {
                        width: 100%;

                        img {
                            display: inline-block;
                        }
                    }
                }

                &.inView .content-wrapper {
                    opacity: 1;
                }

                &:before {
                    content: '';
                    position: absolute;
                    transform: translateX(-0.375em);
                    left: 0;
                    top: 26px;
                    width: 1em;
                    height: 1em;
                    border-radius: 50%;
                    background-color: $primary;
                    opacity: 0;
                    transition: opacity 0.5s ease;
                }

                &.show-bullet:before {
                    @media (min-width: 768px) {
                        opacity: 1;
                    }
                }
            }
        }

        .image-container {
            position: relative;
            display: none;

            @media (min-width: 768px) {
                display: block;
                width: 50%;
            }

            .images {
                position: sticky;
                height: 100vh;
                width: 100%;
                top: 0;

                .image {
                    position: absolute;
                    width: 100%;
                    height: 100%;
                    left: 0;
                    top: 0;
                    background-position: center;
                    background-size: cover;
                    display: block;
                    background: var(--image-background-color, #FFF);

                    img {
                        width: 100%;
                        height: 100%;
                        object-fit: contain;
                    }

                    .placeholder {
                        width: 100%;
                        height: 100%;
                        background-color: gray;
                    }
                }
            }
        }

        .mobile-image {
            width: 100%;
            border-radius: var(--rounded-block);
            overflow: hidden;

            @media (min-width: 768px) {
                display: none;
            }
        }
    }

    .dynamic-sections {
        @media (min-width: 768px) {
            padding-bottom: 30vh;
        }

        position: relative;

        .content-wrapper {
            padding-bottom: 2em;
        }

        .timeline {
            position: absolute;
            height: 0;
            display: none;

            @media (min-width: 768px) {
                display: block;
            }

            .timeline-bar {
                position: absolute;
                height: 100%;
                width: 0.25em;
                background-color: $primary;
                top: 0;
                left: 0;
            }
        }
    }
}

/*!
 * .multicolumn-card.with-background
 */


.multicolumn-card.with-background {
    flex-direction: column;
    gap: 0;
    position: relative;

    .multicolumn-card__info {
        padding: 0 20px 40px;


    }


    .tail {
        svg {
            width: 100%;
            height: auto;
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            top: auto;
            /* aspect-ratio: 584/600; */
              max-width: 450px;
            transform: translateX(-50%);
          left: 50%;
          right: auto;

            path {
                fill: var(--u-background-color, transparent);
            }

        }

        display: block;
        content: '';
        width: 100%;
        aspect-ratio: 25/1;
        position: relative;
    }

    .button {
        padding: clamp(var(--sp-2), 1.2vw, var(--sp-5d5)) clamp(var(--sp-6d5), 1.473vw, var(--sp-7d5));
    }
}

.ulike.multicolumn {
    z-index: 0;
    margin-top: -30vh;

    +.ulike.multicolumn {
        margin-top: 0;

        .section.section--padding {
