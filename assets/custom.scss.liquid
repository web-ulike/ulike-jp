/*!
 * .image-comparison
 */


.image-comparison-row {
  
    display: flex;
    justify-content: space-between;
    gap: 20px;

    .image-comparison-image {
        flex-grow: 1;
        display: flex;
        width: 100%;
        align-items: flex-start;
        gap: 20px;
    }

    .image-comparison-image-comparison {
        flex-grow: 1;
    }

    .image-comparison-image-trigger {
        width: 25%;
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
      width: 200px;

        .trigger {
            width: calc(50% - 10px);

            .image {
                aspect-ratio: 1/1;
                width: 100%;
            }
        }
    }

    .image-comparison-text {
        width: 30%;
    }
}

.image-comparison-trigger {
    position: relative;
    cursor: pointer;

    img {
        border-radius: calc(var(--rounded-block) / 2);
    }

    &:before {
        position: absolute;
        content: '';
        display: block;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 2;
        background: rgba(255, 255, 255, .5);
        opacity: 1;
        transition: opacity 0.3s cubic-bezier(0.4, 0.2, 0.2, 1);
    }

    &.active {
        &:before {
            content: none;
        }
    }
}

.image-comparison-wrapper {
    display: none;

    &.active {
        display: block;
    }
}


@media (min-width: 1024px) {
  .ulike.image-comparison {
    .image-comparison {
      height: 310px;
    }
  }
}

@media (min-width: 1400px) {
  .ulike.image-comparison {
    .image-comparison {
      height: 430px;
    }
  }
  .image-comparison-row .image-comparison-image-trigger {
