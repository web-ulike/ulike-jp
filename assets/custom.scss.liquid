    }

    .title-wrapper {
        min-height: 120px;
        position: relative;

        >.grid {
            position: sticky;
            top: var(--section-padding-top);
        }

        @media screen and (min-width: 768px) {
            &.md\:items-end {
                align-items: flex-start;
            }
        }

    }

    .multicolumn-card.with-background {
