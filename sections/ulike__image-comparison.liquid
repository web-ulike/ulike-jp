{%- liquid
  assign before_image = section.blocks | first
  assign after_image = section.blocks | last
  assign ratio_percent = 38

  if before_image != blank and before_image.settings.image
    assign ratio_percent = 1 | divided_by: before_image.settings.image.aspect_ratio | times: 100
  elsif after_image != blank and after_image.settings.image
    assign ratio_percent = 1 | divided_by: after_image.settings.image.aspect_ratio | times: 100
  endif

  assign ratio_percent_mobile = ratio_percent

  if before_image != blank and before_image.settings.image_mobile
    assign ratio_percent_mobile = 1 | divided_by: before_image.settings.image_mobile.aspect_ratio | times: 100
  elsif after_image != blank and after_image.settings.image_mobile
    assign ratio_percent_mobile = 1 | divided_by: after_image.settings.image_mobile.aspect_ratio | times: 100
  endif
-%}

<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
    --ratio-percent: {{ ratio_percent }}%;
  }

  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} {
      --ratio-percent: {{ ratio_percent_mobile }}%;
    }
  }
</style>



<div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="page-width{% if section.settings.full_width %} page-width--full{% endif %} relative">
    {%- render 'section-heading', section: section -%}

{% assign text_blocks = section.blocks | where: 'type', 'text' %}
{% assign comparison_blocks = section.blocks | where: 'type', 'comparison' %}    
{% assign first_comparison = section.blocks | where: 'type', 'comparison'  | first %}  
  
      
      
<div class="image-comparison-row">
  <div class="image-comparison-text">

    <div class="results-progress">

{%- for text_block in text_blocks -%}      
      
<div class="results-progress-item" style="--lin-width: {{ text_block.settings.percentage }}%; transition-delay: 0.2s">
  <div class="results-progress-txt">
    <p class="number {{ section.settings.number_size }} heading text-base font-bold leading-none tracking-tight">{{ text_block.settings.percentage }}%</p>
    <p class="text text-xs md:text-base lg:text-lg text-medium leading-none">{{ text_block.settings.text }}</p>
  </div>
  <div class="results-lin"></div>
</div>      
{%- endfor -%}
    </div>
    
  </div>

  <div class="image-comparison-image">
{% assign first_comparison_class = " active" %}    
    <div class="image-comparison-image-comparison">



  
{%- for comparison_block in comparison_blocks -%}

{%- liquid
  assign before_image = comparison_block
  assign after_image = comparison_block
  assign ratio_percent = 38

  if comparison_block.settings.image != blank
    assign ratio_percent = 1 | divided_by: comparison_block.settings.image.aspect_ratio | times: 100
  elsif comparison_block.settings.after_image != blank 
    assign ratio_percent = 1 | divided_by: comparison_block.settings.after_image.aspect_ratio | times: 100
  endif

  assign ratio_percent_mobile = ratio_percent

  if comparison_block.settings.image_mobile != blank 
    assign ratio_percent_mobile = 1 | divided_by: comparison_block.settings.image_mobile.aspect_ratio | times: 100
  elsif comparison_block.settings.after_image_mobile != blank 
    assign ratio_percent_mobile = 1 | divided_by: comparison_block.settings.after_image_mobile.aspect_ratio | times: 100
  endif
    
-%}  

  <div id="image-comparison--{{ comparison_block.id }}" class="image-comparison-wrapper{{ first_comparison_class }}" >
  

    <image-comparison id="image-comparison--{{ comparison_block.id }}" class="image-comparison media--{{ section.settings.image_height }} mobile:media--{{ section.settings.image_height_mobile }} block relative overflow-hidden" data-layout="{{ section.settings.layout }}"  {{ comparison_block.shopify_attributes }} >
      {%- capture sizes -%}{% if section.settings.full_width %}100vw{% else %}min({{ settings.page_width }}px, 100vw){% endif %}{%- endcapture -%}
        <div class="comparison__before w-full h-full">
          {%- if before_image.settings.image != blank -%}
            <picture class="media media--height w-full h-full block relative">
              {%- if before_image.settings.image_mobile -%}
                <source
                  media="(max-width: 767px)"
                  srcset="{{ before_image.settings.image_mobile | image_url: width: '400x' }} 400w, {{ before_image.settings.image_mobile | image_url: width: '600x' }} 600w, {{ before_image.settings.image_mobile | image_url: width: '800x' }} 800w, {{ before_image.settings.image_mobile | image_url: width: '1000x' }} 1000w"
                  width="{{ before_image.settings.image_mobile.width }}"
                  height="{{ before_image.settings.image_mobile.height }}"
                >
              {%- endif -%}
  
              {{- before_image.settings.image | image_url: width: before_image.settings.image.width | image_tag: loading: 'lazy', sizes: sizes, widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', is: 'lazy-image' -}}
            </picture>
          {%- else -%}
            <div class="media media--height w-full h-full relative">
              {{- 'lifestyle-1' | placeholder_svg_tag: 'placeholder' -}}
            </div>
          {%- endif -%}
          {%- if before_image.settings.subheading != blank or before_image.settings.heading != blank -%}
            <div class="comparison__box comparison__box--{{ before_image.settings.content_position }} grid items-start absolute top-0 left-0 w-full h-full" style="--color-foreground: {{ before_image.settings.color_text.rgb }};">
              <div class="grid gap-1 md:gap-2">
                {%- if before_image.settings.subheading != blank -%}
                  <p class="text-xs md:text-base lg:text-lg text-medium leading-none">{{ before_image.settings.subheading | escape }}</p>
                {%- endif -%}
                {%- if before_image.settings.heading != blank -%}
                  <p class="heading text-base md:text-2xl lg:text-3xl font-bold leading-none tracking-tight">{{ before_image.settings.heading | escape }}</p>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        </div>



        <div class="comparison__after absolute top-0 left-0 w-full h-full z-1">
          {%- if after_image.settings.after_image != blank -%}
            <picture class="media media--height w-full h-full block relative">
              {%- if after_image.settings.after_image_mobile -%}
                <source
                  media="(max-width: 767px)"
                  srcset="{{ after_image.settings.after_image_mobile | image_url: width: '400x' }} 400w, {{ after_image.settings.after_image_mobile | image_url: width: '600x' }} 600w, {{ after_image.settings.after_image_mobile | image_url: width: '800x' }} 800w, {{ after_image.settings.after_image_mobile | image_url: width: '1000x' }} 1000w"
                  width="{{ after_image.settings.after_image_mobile.width }}"
                  height="{{ after_image.settings.after_image_mobile.height }}"
                >
              {%- endif -%}
  
              {{- after_image.settings.after_image | image_url: width: after_image.settings.after_image.width | image_tag: loading: 'lazy', sizes: sizes, widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', is: 'lazy-image' -}}
            </picture>
          {%- else -%}
            <div class="media media--height w-full h-full relative">
              {{- 'lifestyle-2' | placeholder_svg_tag: 'placeholder' -}}
            </div>
          {%- endif -%}
          {%- if after_image.settings.subheading != blank or after_image.settings.heading != blank -%}
            <div class="comparison__box comparison__box--{{ after_image.settings.content_position }} grid items-start absolute top-0 left-0 w-full h-full text-right" style="--color-foreground: {{ before_image.settings.color_text.rgb }};">
              <div class="grid gap-1 md:gap-2">
                {%- if after_image.settings.subheading != blank -%}
                  <p class="text-xs md:text-base lg:text-lg text-medium leading-none">{{ after_image.settings.after_subheading | escape }}</p>
                {%- endif -%}
                {%- if after_image.settings.heading != blank -%}
                  <p class="heading text-base md:text-2xl lg:text-3xl font-bold leading-none tracking-tight">{{ after_image.settings.after_heading | escape }}</p>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        </div>


      {%- if before_image != blank and after_image != blank -%}
        <button type="button" class="comparison__button absolute z-1" aria-label="{{ 'general.accessibility.drag' | t | escape }}" tabindex="-1">
          <span class="absolute flex items-center justify-center pointer-events-none">
            {%- render 'icon', icon: 'drag' -%}
          </span>
        </button>
      {%- endif -%}
    </image-comparison>
  </div>
  {% assign first_comparison_class = "" %}  
{%- endfor -%}

