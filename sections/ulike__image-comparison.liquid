{% assign first_comparison_class = " active" %}
    <div class="image-comparison-image-trigger">



  
{%- for comparison_block in comparison_blocks -%}
  
                  <div id="image-comparison-trigger--{{ comparison_block.id }}" data-role="image-comparison-trigger" data-target="#image-comparison--{{ comparison_block.id }}" class="image-comparison-trigger trigger{{ first_comparison_class }}">
                {%- if comparison_block.settings.image != blank -%}
                  
                  <img
                    srcset="{{ comparison_block.settings.trigger | image_url: height: image_height }} 1x, {{ comparison_block.settings.trigger | image_url: height: image_height_2x }} 2x"
                    src="{{ comparison_block.settings.trigger | image_url: height: image_height }}"
                    alt="{{ comparison_block.settings.trigger.alt | escape }}"
                    loading="lazy"
                    width="{{ image_height | times: comparison_block.settings.trigger.aspect_ratio }}"
                    height="{{ image_height }}"
                    is="lazy-image"
                    class="image"
                  />
                {%- else -%}
                  <span class="image">{{- 'logo' | placeholder_svg_tag: 'placeholder' -}}</span>
                {%- endif -%}  
                  
