<script>

if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      inits_comparison{{ section.id | replace: "template--", "" }}();
    });
  } else {
    inits_comparison{{ section.id | replace: "template--", "" }}();
  }


  
  
 


 

  function inits_comparison{{ section.id | replace: "template--", "" }} () {
    console.log("Hello world!");
    
    var _elements = $('#shopify-section-{{ section.id }} .image-comparison');    
    var _triggers = $('#shopify-section-{{ section.id }} .trigger') 
    
    _triggers.each(function( index ) {
      console.log( index + ": " + $( this ).text() );
      var _trigger = $(this);

      _trigger.on('click', function() { 
        
          if(! _trigger.hasClass('active')) {
            _trigger.siblings().removeClass('active');
            _trigger.addClass('active');

            var _target = _trigger.attr('data-target');

              $(_target).siblings().removeClass('active');
              $(_target).addClass('active');            
            
          }      
        
      });      
      
    });   

  }

</script>

