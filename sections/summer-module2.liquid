.price_two-box {
  display: flex;
  margin-top: 47px;
  align-items: center;
  gap: 26px;
}
.ori_price_cus {
  color: #000;
font-size: 34px;
font-style: normal;
font-weight: 400;
line-height: 130%;
}
.price_cus{
  color:  #5B7C9D;
font-size: 45px;
font-style: normal;
font-weight: 500;
line-height: 130%; /* 74.921px */
}
.wang{
  opacity: 0.5;
color: #000;
font-size: 24.504px;
font-style: normal;
font-weight: 500;
line-height: 130%;
