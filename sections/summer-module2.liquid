.shuir{
  opacity: 0.5;
color: #000;
font-size: 18.055px;
font-style: normal;
font-weight: 500;
line-height: 130%;
}
.price_cus .wang{
  color:  #5B7C9D;
font-size: 31.811px;
font-style: normal;
font-weight: 500;
line-height: 130%;
opacity: 1;
}
.price_cus .shuir{
  color:  #5B7C9D;
font-size: 22.953px;
font-style: normal;
font-weight: 500;
line-height: 130%;
opacity: 1;
}
.number_two-btn{
margin-top: 47px;
display: flex;
gap: 30px;
flex-wrap: wrap;
}
.two_cnt{
  flex: 1;
}
.number_two-btn a{
  display: flex;
padding: 10px 58px;
border-radius: 34px;
border: var(--buttons-border-width) solid #5B7C9D;
color: #5B7C9D;
text-align: center;
/* font-size: 27px; */
    line-height: 1;
    font-weight: var(--font-medium);
    font-family: var(--font-navigation-family);
    font-size: var(--font-button-size);
      align-items: center;
}
.number_two-btn a:hover{
  background: #5B7C9D;
  color: #fff;
}
.line_th{
  text-decoration: line-through;
}
 .ori_price_cus span:first-child{
  font-family: var(--font-it-family);
}
