<style>
 #shopify-section-{{ section.id }} {
--txt_color: {{ section.settings.txt_color}};
  --code_text_color: {{ section.settings.code_text_color}};
--prize_text_color: {{ section.settings.prize_text_color}};
--note_text_color: {{ section.settings.note_text_color}};
 }
  
  .shopify-section-group-header-group.topbar-section,.shopify-section-group-header-group.header-section,.footer-group{
    display: none;
  }
  .main-content{
    background-color: #fff;
  }
  .page-container{
    overflow: hidden;
    position: relative;
  }
    .section__inner{
    padding: 0 20px;
    box-sizing: border-box;
  }
  .md2-cnt svg{
      color: var(--txt_color);
  }
  @media only screen and (min-width: 768px) {
    body {
          position: relative;
      }
      body:before {
          content: "";
          background: url({{section.settings.bg_image | image_url}}) no-repeat center center;
          background-size: cover;
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
  animation: ripple 4s cubic-bezier(0.2, 0, 0, 1);
      }
      .page-container{
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
        overflow: hidden;
  }
  }
  @keyframes ripple {
  0% {
    transform: scale(1.5);
  }
  100% {
    transform: scale(1);
  }
}
  /* module1 start*/
  .section-inner{
    position: relative;
  }
  .kv_cnt{
    position: absolute;
    width: 100%;
    height: 100%;
    inset: 0;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .kv_cnt .title_kv{
    font-family: var(--font-it-family);
    color: #FFF;
      /* text-align: center; */
      font-size: 16vw;
      font-style: normal;
      font-weight: 700;
      line-height: 120%;
      text-transform: uppercase;
      padding-top: 10vw;
      padding: 10vw 20px 0;
     writing-mode: vertical-rl;
  }
  .kv_cnt .txt_kv{
    color: #FFF;
  text-align: center;
  font-size: 4.2vw;
  font-style: normal;
  font-weight: 400;
  line-height: 100%;
  padding: 0 20px;
  }
  .hidden-pocke.title_kv{
    visibility: hidden;
  }
  @media only screen and (min-width: 768px) {
    .kv_cnt .title_kv{
      width: 100%;
      font-size: 80px;
      padding-top: 50px;
      margin: 0 auto 10px;
    }
    .kv_cnt .txt_kv{
  font-size: 18px;
  }
  }
  /* module1 end*/
  /* md2-inner start*/
  .md2-inner{
    position: relative;
    padding: 3.73vw 0 27vw 0;
  }
  .scroll {
      position: absolute;
      right: 3.5vw;
      top: -29.3vw;
    width: 4.5vw;
  }
  .svroll__inner-cus {
      /* position: relative; */
   width: 4.5vw;
    display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2.66vw;
  }
  .ver__text-cus {
      font-size: 3.2vw;
        writing-mode: vertical-rl;
      /* transform: rotate(-90deg); */
  }
  .ver__bar-cus {
      display: block !important;
      width: 0.25px;
      height: 10.6vw;
      background: #3F3636;
      /* position: absolute;
      left: 2.4vw;
      top: 16vw; */
  }
  .md2-cnt {
    text-align: center;
    position: relative;
  }
  .md1-txt1{
    color: var(--txt_color);
  font-size: 3.5vw;
  font-style: normal;
  font-weight: 400;
  line-height: 130%;
  margin-bottom: 5px;
  letter-spacing: 1px;
  }
  .md1-txt1 strong{
    font-family: var(--font-it-family);
    font-size: 4.8vw;
    font-style: normal;
  font-weight: 400;
  line-height: 130%;
  }
  .md1-txt1 em{
    font-style: normal;
  font-weight: 400;
  line-height: 130%;
    letter-spacing: -4.861px;
  }
  .md1-txt2{
    color: var(--code_text_color);
  text-align: center;
  font-size: 10vw;
  font-style: normal;
  font-weight: 400;
  line-height: 100%;
  margin-bottom: 3.5vw;
  display: flex;
      justify-content: center;
  }
  .md1-txt2 strong,.md1-txt2 em{
    font-size: 11.2vw;
    font-style: normal;
  font-weight: 400;
  line-height: 100%;
  font-family: var(--font-it-family);
  }
  .md1-txt2 em{
      font-family: var(--font-it-family);
  }
  .md2-cnt svg{
    width: 8vw;
    height: 8vw;
    margin: 0 auto 3.2vw;
  }
  .md1-txt3{
    margin-top: 1.6vw;
  }
  .md1-txt4{
