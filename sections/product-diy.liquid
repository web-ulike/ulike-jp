    line-height: 1.4;
    margin-top: 18px;
    text-align: center;
}

.product-diy .product-diy-list {
    margin-top: 80px;
}

.product-diy .product-diy-item {
    display: flex;
    margin-bottom: 100px;
}

/* .product-diy .product-diy-item:last-child {
    margin-bottom: 0;
} */

.product-diy .product-diy-left {
    width: 36.6%;
    margin-right: 20px;
}

.product-diy .product-diy-left .product-diy-info {
    display: none;
}

.product-diy .product-diy-img {
    height: 100%;
    border-radius: 12px;
    overflow: hidden;
}

.product-diy .product-diy-img img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.product-diy .product-diy-right {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.product-diy .product-diy-top {
    flex: 1;
    background: #fff;
    border-radius: 12px;
    display: flex;
    align-items: center;
    padding: 11px 50px 11px 26px;
}

.product-diy .product-diy-top .img {
    width: 42%;
    display: block;
}

.product-diy .product-diy-detail {
    flex: 1;
    margin-left: 26px;
}

.product-diy .product-diy-item-title {
    font-size: 32px;
    color: #000;
    font-weight: bold;
    line-height: 1;
}

.product-diy .product-diy-price {
    display: flex;
    align-items: flex-end;
    font-size: 20px;
    color: #000;
    font-weight: bold;
    margin-top: 25px;
}

.product-diy .product-diy-price-old {
    font-size: 18px;
    color: #6D6D6D;
    font-weight: normal;
    margin-left: 5px;
    text-decoration: line-through;
}

.product-diy .product-diy-desc {
    font-size: 16px;
    color: #9D9D9D;
    line-height: 1.5;
    margin-top: 25px;
}

.product-diy .product-diy-param {
    display: flex;
    margin-top: 25px;
}

.product-diy .product-diy-param-item {
    position: relative;
    padding: 0 18px;
}

.product-diy .product-diy-param-item::after {
    position: absolute;
    content: '';
    display: block;
    width: 1px;
    height: 70%;
    background: #B7B7B7;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.product-diy .product-diy-param-item:last-child::after {
    display: none;
}

.product-diy .product-diy-param-item:first-child {
    padding-left: 0;
}

.product-diy .product-diy-param-top {
    display: flex;
    align-items: flex-end;
    font-size: 29px;
    color: #5C9AE5;
    font-weight: bold;
    line-height: 1;
    justify-content: center;
}

.product-diy .product-diy-param-top span {
    font-size: 14px;
    margin-bottom: 3px;
}

.product-diy .product-diy-param-bottom {
    text-align: center;
    font-size: 12px;
    color: #5C9AE5;
    margin-top: 4px;
    line-height: 1.2;
    white-space: nowrap;
    /* transform: scale(0.67); */
    zoom: 0.67;
}

.product-diy .product-diy-btn {
    display: flex;
    margin-top: 25px;
}

.product-diy .product-diy-btn-item {
    height: 40px;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 13px;
    color: #181818;
    border: 1px solid #181818;
    text-decoration: none;
    cursor: pointer;
}

.product-diy .product-diy-btn-item.disable-btn{
  opacity: .6;
  pointer-events: none;
}

.product-diy .product-diy-btn-item:last-child {
    border: 0;
    background: #5C9AE5;
    color: #fff;
    margin-left: 20px;
}


.product-diy .product-diy-info {
    height: 31.2%;
    background: #fff;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0 50px;
    margin-top: 20px;
}

.product-diy .product-diy-info-title {
