<script>
    function refreshCartDrawer(json) {
        $.ajax({
            url: '/cart.js',
            dataType: 'json',
            success: function (response) {
                // 将更新后的购物车内容渲染到购物车抽屉的显示区域
                console.log(response)
                response["sections"] = json["sections"];
              document.documentElement.dispatchEvent(new CustomEvent("cart:refresh", {
                bubbles: true,
                detail: {
                  cart: response
                }
              }));
              $('[href="/cart"]').attr('aria-expanded',true)
              $('.disable-btn').removeClass('disable-btn')
            }
        });
    }

    function addStarProduct(elem, type) {
        document.querySelectorAll(elem).forEach(function (elem) {
            elem.onclick = function (e) {
                e.preventDefault();
              if(!elem.getAttribute('data-variant-id')) return
              $(elem).addClass('disable-btn')
                let formData = {
                    quantity: 1,
                    form_type: 'product',
                    utf8: '✓',
                    id: elem.getAttribute('data-variant-id'),
                    sections: 'mini-cart'
                };
                fetch('/cart/add.js', {
                        method: 'POST',
                        credentials: 'same-origin',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    })
                    .then(function (response) {
                        return response.json();
                    })
                    .then(function (json) {
                        refreshCartDrawer(json)
                        // setTimeout(function () {
                        //     if (type == 'checkout') {
                        //         window.location.href = '/checkout';
                        //     } else {}
                        // }, 1000);
                    });
            };
        });
    }
    if (document.querySelectorAll('.atcButton').length > 0) {
        addStarProduct('.atcButton', '');
    }
</script>
