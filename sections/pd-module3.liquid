     right: 0;
    top: 0;
    transform: translate(110%, 50%);
}
  .pd_md3-right {
    flex-basis: 70%;
}
@keyframes rotate {
      0% {
        transform: rotate(0deg);
      }
     
      50% {
        transform: rotate(15deg);
      }
     
      100% {
        transform: rotate(0deg);
      }
    }
