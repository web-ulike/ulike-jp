<style>
   #shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color }};
    --section-background: {{ section.settings.background }};
    background:var(--section-background);
  }
    .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.6);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
  }
}
/* pd_module3-box start*/
.pd_module3-box .pd_cust-container{
  overflow: visible;
}
.pd_module3-box{
{% if section.settings.bg_image != blank %}
      background: #80D9EF url({{ section.settings.bg_image | image_url }}) no-repeat center;
      background-size: cover;
  {% endif %}
}
.pd_md3-item{
  border-radius: 10px;
border: 3px solid #F4F431;
background: rgba(255, 255, 255, 0.80);
padding: 50px 90px 63px 139px;
position: relative;
margin-top: 86px;
}
.pd_md3-item .sale_logo{
  position: absolute;
  top: 0;
  left: 0;
  transform: translate(-50%,-40%);
 
}
.pd_md3-item .sale_logo img{
  animation: rotate 1s infinite alternate ease-in-out;
}
.pd_md3-top{
  display: flex;
  gap: 70px;
  align-items: center;
}
.pd_md3-left{
  flex: 1;
}
.pd_md3-right .pd_md3-tle{
  margin-bottom: 10px;
}
.pd_md3-subtle{
  color: #DE004D;
font-size: 24px;
font-style: normal;
font-weight: 500;
line-height: 150%;
margin-bottom: 20px;
}
.pd_md3-ul{
  color: #000;
font-size: 20px;
font-style: normal;
font-weight: 400;
line-height: 150%;
}
.pd_md3-item .pd_module3-price{
  justify-content: flex-start;
  margin-top: 30px;
  display: flex;
    align-items: center;
    gap: 10px;
}

.pd_md3-item .md3_price-left .md3_price-left-1{
  color: #000;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 130%;
  display: flex;
align-items: center;
gap: 5px;
}
.pd_md3-item .md3_price-left .md3_price-left-2{
  color: #000;
font-size: 26px;
font-style: normal;
font-weight: 400;
line-height: 130%;
letter-spacing: -1.04px;
}
.pd_md3-item .md3_price-right{
  color:  #E0004D;
font-size: 55.41px;
font-style: normal;
font-weight: 500;
line-height: 130%;
letter-spacing: -3.325px;
}
.md3_price-left-2 .sp1{
  font-size: 26px;
text-decoration: line-through;
}
.md3_price-left-2 .sp2{
  font-size: 18px;

letter-spacing: 1px;
}
.pd_md3-item .md3_price-right .sp1{
font-size: 26.721px;
letter-spacing: 1px;
}
.pd_md3-item .md3_price-right .sp2{
font-size: 19.28px;
letter-spacing: 1px;
}
.pd_md3-bt{
      display: flex;
    gap: 43px;
   margin-top:40px;
}
  .pd_md3-bt .product-form-wrapper{
    margin-top:0;
    flex:1;
  }
   .pd_md3-bt .product-form__submit{
    color: #FFF;
    height: 56px;
    border-radius: 35px;
background: #00B4DE;
    border-color:#00B4DE;
     font-size: 25px;
font-style: normal;
font-weight: 400;
line-height: 130%; /* 32.5px */
     box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }
   .pd_md3-bt .product-form__submit.button:after{
    border-color:#00B4DE;
    border-radius: 35px;
  }
   .pd_md3-bt .buy_btn{
     flex:1;
     border-radius: 35px;
border: 1px solid #00B4DE;
box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
     text-align: center;
font-size: 25px;
font-style: normal;
font-weight: 400;
line-height: 130%;
         display: flex;
    align-items: center;
    justify-content: center;
     color: #00B4DE;
   }
   .pd_md3-bt .buy_btn:hover{
     background: #E0004D;
        color: #FFF;
   }
  img.md3_svg {
    position: absolute;
}
  img.md3_svg.md3_svg1 {
    left: 0;
    top: 0;
    transform: translate(-124%, -30%);
}
    img.md3_svg.md3_svg2 {
    left: 0;
    bottom: 0;
    transform: translate(-124%, 0%);
}
   img.md3_svg.md3_svg3 {
