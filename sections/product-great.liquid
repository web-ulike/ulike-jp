<style>

#shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color.red }}, {{  section.settings.text_color.green }}, {{  section.settings.text_color.blue }};
    --section-background: {{ section.settings.background }};
    --color-border: 255, 255, 255;
    background: var(--section-background); 
  }
     .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.mobile_padding_top }}px);
    padding-bottom: calc({{ section.settings.mobile_padding_bottom }}px );
  }
}
.product-great{
  /* background: #F8F8F8; */
}
.product-great h3{
  color:  #190A0A;
text-align: center;
font-size: 44px;
font-style: normal;
font-weight: 500;
line-height: 125%;
margin-bottom: 26px;
}
.product-great .great-txt{
  color:  #3F3636;
text-align: center;
font-size: 20px;
font-style: normal;
font-weight: 400;
line-height: 150%;
margin-bottom: 72px;
}
.product-great  .product-great-inner{
  display: flex;
  align-items: center;
}
.great-li{
  width: 43%;
  background: #FFF;
  padding: 34px 20px 54px;
  position: relative;
}
.great-li.great-li2{
width: 57%;
background: linear-gradient(180deg, #E6F4FF 0%, #FFF 100%);
padding: 42px 20px 64px;
}
.great-li .great-thead{
  text-align: center;
  margin-bottom: 30px;
}
.great-li .great-thead .great-thead-tle{
  color: #000;
text-align: center;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 250%; 
letter-spacing: 0.36px;
}
.great-li .great-tbody{
  color: #000;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 320%; 
letter-spacing: 0.36px;
}
.great-th{
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1px solid #D9D9D9;
}
.great-th .great-td{
  flex: 1;
  text-align: center;
}
.great-li.great-li2 .great-thead-tle{
  font-size: 24px;
  letter-spacing: 0.48px;
}
.great-li.great-li2 .great-tbody{
  color: #000;
text-align: center;
font-size: 20px;
font-style: normal;
font-weight: 400;
line-height: 349%; 
letter-spacing: 0.4px;
}
.great-li.great-li2  .great-thead{
  margin-bottom: 20px;
}
.great-vs-box{
  position: absolute;
  color: #E0004D;
font-size: 24px;
font-style: normal;
font-weight: 400;
line-height: 1; 
letter-spacing: 0.48px;
padding: 20px;
border: 1px solid #E0004D;
border-radius: 50%;
right: 0;
top: 15%;
transform: translateX(50%);
z-index: 1;
background: #fff;
}
  .great-li .great-thead img{
    margin:0 auto;
  }
  .tle_image{
    margin-top:20px;
  }
  .great-logo.great-td {
    display: flex;
    justify-content: center;
}
@media (max-width: 768px){
    .tle_image{
    margin-top:10px;
  }
.product-great h3{
  font-size: 24px;
  margin-bottom: 10px;
}
.product-great .great-txt{
  font-size: 13px;
  margin-bottom: 21px;
}
.product-great .product-great-inner{
  flex-direction: column;
}
.great-li,.great-li.great-li2{
  width: 100%;
      padding: 34px 20px;
      margin-top: 21px;
}
.great-li .great-thead .great-thead-tle{
  font-size: 20px;
}
.great-li .great-thead{
  margin-bottom: 15px;
}
.great-li .great-tbody{
  font-size: 16px;
  /* line-height: 1; */
}
.great-li.great-li2 .great-thead {
    margin-bottom: 14px;
}
.great-li.great-li2 .great-tbody{
  font-size: 16px;
}
.great-vs-box{
  top: 100%;
  right: 50%;
  transform: translate(50%, -40%);
}
}
</style>
 <section class="section-{{ section.id }}-padding">
<div class="product-great to-top">
              <div class="jp-container">
                <h3>{{ section.settings.tle }}</h3>
                <div class="great-txt">{{ section.settings.des }}</div>
                <div class="product-great-inner">
                 

                   {%- for block in section.blocks -%}
                   <div class="great-li great-li{{ forloop.index }}">
                     {%- if forloop.first -%}
                    <div class="great-vs-box">
                      vs
                    </div>
                      {%- endif -%}
                     
                    <div class="great-thead">
                       {%- if block.settings.image -%}
                       <picture>
                      {%- if block.settings.image_mobile -%}
                            <source media="(max-width: 767px)" srcset="{{ block.settings.image_mobile | image_url }}">
                                 {%- endif -%}
                             {%- if block.settings.image -%}
                            <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}"  width="{{  block.settings.image.width  | divided_by: 2  }}" height="{{  block.settings.image.height  | divided_by: 2  }}">
                            {%- endif -%}
                       </picture>
                       {%- endif -%}
                        {%- if block.settings.tle != blank -%}
                      <div class="great-thead-tle"> {{ block.settings.tle }}</div>
                       {%- endif -%}

                         {%- if block.settings.tle_image -%}
                        <picture class="tle_image">
                      {%- if block.settings.mobile_tle_image -%}
                            <source media="(max-width: 767px)" srcset="{{ block.settings.mobile_tle_image | image_url }}">
                                 {%- endif -%}
                             {%- if block.settings.tle_image -%}
                            <img src="{{ block.settings.tle_image | image_url }}" alt="{{ block.settings.tle_image.alt }}"  width="{{  block.settings.tle_image.width  | divided_by: 2  }}" height="{{  block.settings.tle_image.height  | divided_by: 2  }}">
                            {%- endif -%}
                       </picture>
                       {%- endif -%}
                    </div>
                    <div class="great-tbody">
                      <div class="great-th">
                        <div class="great-td">{{ block.settings.th1_td1 }}</div>
                        <div class="great-td">{{ block.settings.th1_td2 }}</div>
                         {%- if block.settings.th1_td3 -%}
                        <div class="great-logo great-td">
                          <img src="{{ block.settings.th1_td3 | image_url }}" alt="{{ block.settings.th1_td3.alt }}"> 
                        </div>
                        {%- endif -%}
                      </div>
                      <div class="great-th">
                        <div class="great-td">{{ block.settings.th2_td1 }}</div>
                        <div class="great-td">{{ block.settings.th2_td2 }}</div>
                         {%- if block.settings.th2_td3 -%}
                        <div class="great-logo great-td">
                          <img src="{{ block.settings.th2_td3 | image_url }}" alt="{{ block.settings.th2_td3.alt }}"> 
                        </div>
                        {%- endif -%}
                      </div>
                       <div class="great-th">
                        <div class="great-td">{{ block.settings.th3_td1 }}</div>
                        <div class="great-td">{{ block.settings.th3_td2 }}</div>
                         {%- if block.settings.th3_td3 -%}
                        <div class="great-logo great-td">
                          <img src="{{ block.settings.th3_td3 | image_url }}" alt="{{ block.settings.th3_td3.alt }}"> 
                        </div>
                        {%- endif -%}
                      </div>
                       <div class="great-th">
                        <div class="great-td">{{ block.settings.th4_td1 }}</div>
                        <div class="great-td">{{ block.settings.th4_td2 }}</div>
                         {%- if block.settings.th4_td3 -%}
                        <div class="great-logo great-td">
                          <img src="{{ block.settings.th4_td3 | image_url }}" alt="{{ block.settings.th4_td3.alt }}"> 
                        </div>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
                   {%- endfor -%}


                  
                </div>
              </div>
            </div>
  </section>
