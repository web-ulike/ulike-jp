<style>
    #shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color.red }}, {{  section.settings.text_color.green }}, {{  section.settings.text_color.blue }};
    --section-background: {{ section.settings.background.red }}, {{ section.settings.background.green }}, {{ section.settings.background.blue }};
    --color-border: 255, 255, 255;
    /* background: rgb(var(--section-background, var(--background))); */
  }
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.6);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
  }
}
.point_num-box1{
  /* margin-top: 100px; */
}
.point_num-box1 .point_1{
  color: #E0004D;
  font-size: 20px;
  font-style: normal;
  font-weight: 500;
  line-height: 150%;
  letter-spacing: 0.2px;
  border-bottom: 1px solid #E0004D;
  max-width: 550px;
}
.point_num-box1 .point_num2-tle1{
  color: #000;
font-family: var(--font-hd-family);
font-size: 30px;
font-style: normal;
font-weight: 400;
line-height: 150%;
letter-spacing: 1.5px;
margin-top: 22px;
}
.point_num-box1 .point_num2-tle2{
  color: #000000;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 180%; /* 32.4px */
letter-spacing: 0.18px;
margin-top: 50px;
}
.point_num-box1 .point_num2-ul{
  display: flex;
  justify-content: space-between;
  gap: 20px;
  margin-top: 50px;
}
@media (max-width: 767px){
  .point_num-box1{
    /* margin-top: 40px; */
  }
  .point_num-box1 .point_1{
    font-size: 10px;
    line-height: 1.5;
    width: 80%;
  }
  .point_num-box1 .point_num2-tle1{
    font-size: 16px;
    margin-top: 15px;
    width: 80%;
  }
  .point_num-box1 .point_num2-tle2{
    font-size: 12px;
    margin-top: 35px;
    width: 70%;
    float: right;
  }
  .point_num-box1 .point_num2-ul{
    flex-direction: column;
    margin: 40px 0px 0 -20px;
  }
  .point_num-box1 .point_num2-ul .point_num2-li:first-child{
    display: flex;
  }
  .point_num-box1 .point_num2-ul .point_num2-li:nth-child(2){
    display: flex;
    justify-content: flex-end;
  }
  .point_num-box1 .point_num2-ul .point_num2-li:first-child picture{
    width: 100%;
  }
  .point_num-box1 .point_num2-ul .point_num2-li:first-child img{
    width: 100%;
  }
  .point_num-box1 .point_num2-ul .point_num2-li:nth-child(2) img{
    width: 80%;
  }
  .point_num-box1 .point_num2-ul .point_num2-li:nth-child(3) img{
    width: 80%;
  }

}
</style>
   <section>
    <div class="point_num-wrapper section-{{ section.id }}-padding">
      <div class="custom_container">
         <div class="point_num-box1">
           {%- if section.settings.tle_1 != blank -%}
          <div class="point_1 to-top" style="transition-delay: 0.1s;">
           {{ section.settings.tle_1 }}
          </div>
          {%- endif -%}
           {%- if section.settings.tle_2 != blank -%}
          <div class="point_num2-tle1 to-top" style="transition-delay: 0.2s;">
           {{ section.settings.tle_2 }}
          </div>
            {%- endif -%}
            {%- if section.settings.tle_3 != blank -%}
          <div class="point_num2-tle2 to-top" style="transition-delay: 0.3s;">
           {{ section.settings.tle_3 }}
          </div>
            {%- endif -%}
          <div style="clear:both;display: block;"></div>
          <div class="point_num2-ul">

            {%- for block in section.blocks -%}
            <div class="point_num2-li to-top" style="transition-delay: .{{forloop.index | plus: 3}}s">
               <picture>
            {%- if block.settings.image_mobile -%}
           <source
              media="(max-width: 767px)"
              srcset="{{ block.settings.image_mobile | image_url: width: '400x' }} 400w, {{ block.settings.image_mobile | image_url: width: '600x' }} 600w, {{ block.settings.image_mobile | image_url: width: '800x' }} 800w, {{ block.settings.image_mobile | image_url: width: '1000x' }} 1000w"
              width="{{ block.settings.image_mobile.width }}"
              height="{{ block.settings.image_mobile.height }}"
            >
            {%- endif -%}
            {%- if block.settings.image -%}
             {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'eager', sizes: '100vw', widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'trade_banner__image' -}}
            {%- endif -%}
          </picture>
            </div>
             {%- endfor -%}
          </div>
        </div>


      </div>
    </div>
  </section>
<script>
</script>
{% schema %}
{
  "name": "Air10 Point Module2",
  "class": "shopify-section--air10-point-module2", 
  "settings": [
     {
