<style>
     #shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color }};
    --section-background: {{ section.settings.background }};
    background:  {% if section.settings.bg_image != blank %}url('{{ section.settings.bg_image | image_url  }}') {% endif %} var(--section-background); no-repeat 100% 100%;
    background-size: cover;
  }
  @media only screen and (min-width: 768px) {
  }
@media only screen and (min-width: 390px) {
 
}
  .donki-rich-text__wrapper{
    padding: 30px 20px 20px 30px;
    color: #FFF;
  }
  .donki-rich__text{
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.3;
  }
</style>
  <section>
     <div class="donki-rich-text__wrapper">
        <div class="donki-rich__text js-observer">{{ section.settings.txt }}</div>
    </div>
    
  </section>
{% schema %}
{
  "name": "Donki Rich Text",
  "class": "shopify-section--donki-rich-text", 
  "settings": [
     {
      "type": "richtext",
      "id": "txt",
      "label": "Text"
    },
      {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#F9F8F6"
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "Donki Rich Text"
    }
  ]
}
{% endschema %}