                fill="#190A0A" />
              <circle cx="20" cy="20" r="19.2857" transform="rotate(-180 20 20)" stroke="#190A0A"
                stroke-width="1.42857" />
            </svg>
          </div>
          <div class="technology-remark-arraw technology-remark-arraw-next">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
              <path fill-rule="evenodd" clip-rule="evenodd"
                d="M16.3997 6.93379L15.8946 6.42871L14.8845 7.43886L15.3896 7.94394L20.0008 12.5552L24.3474 16.9018C24.9053 17.4596 25.8098 17.4596 26.3677 16.9018L21.011 11.545L16.3997 6.93379ZM28.8997 20.4439C29.1787 20.165 29.1787 19.7127 28.8997 19.4338C28.8058 19.3399 28.6922 19.2776 28.5722 19.2469V19.2246H28.3962H28.3931H27.8579H20.5361H13.2143H11.4285C10.6395 19.2246 9.99995 19.8642 9.99995 20.6531H13.2143H26.6702L15.3896 31.9338L14.8845 32.4389L15.8946 33.449L16.3997 32.9439L28.8997 20.4439Z"
                fill="#190A0A" />
              <circle cx="20" cy="20" r="19.2857" stroke="#190A0A" stroke-width="1.42857" />
            </svg>
          </div>
        </div>
      {%- endif -%}        
      <div class="technology-remark-slide">
        <div class="technology-remark-list swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="technology-remark-item swiper-slide">
              {%- if block.settings.text != blank -%}
                <p class="technology-remark-p">
                  {{ block.settings.text }}
                </p>
              {%- endif -%}
              {%- if block.settings.text1 != blank -%}
                <div class="technology-remark-flex">
                  <p class="technology-remark-name">{{ block.settings.text1 }}</p>
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  new Swiper(".technology-remark-slide", {
    slidesPerView: "auto",
    spaceBetween: 20,
    navigation: {
      nextEl: ".technology-remark-arraw-next",
      prevEl: ".technology-remark-arraw-prev",
    },
  })
</script>
{% schema %}
{
  "name": "technology-remark",
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "text1",
          "label": "Text"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "technology-remark",
      "blocks": []
    }
  ]
}
{% endschema %}
