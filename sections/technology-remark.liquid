<style>
.technology-remark {
  padding-top: 50px;
  background: #f6f6f6;
}

.technology-remark .technology-remark-h3 {
  color: #190a0a;
  font-size: 32px;
  line-height: 1.25;
  text-align: center;
  font-weight: normal;
  font-family: var(--font-heading-family);
  margin: 0;
}

.technology-remark .technology-remark-arraws {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 40px;
  gap: 60px;
}

.technology-remark .technology-remark-arraw {
  width: 40px;
  cursor: pointer;
}

.technology-remark .technology-remark-arraw svg {
  display: block;
  width: 100%;
  height: auto;
}

.technology-remark .swiper-button-disabled {
  opacity: 0.25;
  cursor: default;
}

.technology-remark .technology-remark-slide {
  overflow: hidden;
  margin-top: 40px;
}

.technology-remark .technology-remark-list {
  display: flex;
}

.technology-remark .technology-remark-item {
  width: 100%;
  flex-shrink: 0;
  padding: 30px 48px;
  background: #fff;
  height:auto;
}

.technology-remark .img-star {
  max-width: 228px;
  display: block;
}

.technology-remark .technology-remark-p {
  color: #000;
  font-size: 36px;
  line-height: 1.5;
  font-family: var(--font-heading-family);
  text-align: center;
  margin: 0;
  margin-top: 16px;
}

.technology-remark .technology-remark-flex {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 25px;
}

.technology-remark .technology-remark-name {
  color: #000;
  font-size: 24px;
  line-height: 1;
}

.technology-remark .img-logo {
  max-width: 115px;
  display: block;
}

@media (max-width: 991px) {
  .technology-remark {
    padding-top: 46px;
    position: relative;
    padding-bottom: 56px;
  }

  .technology-remark .technology-remark-h3 {
    font-size: 20px;
  }

  .technology-remark .technology-remark-arraws {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    justify-content: center;
    gap: 40px;
  }

  .technology-remark .technology-remark-slide {
    margin-top: 16px;
  }

  .technology-remark .technology-remark-item {
    padding: 24px 16px;
  }

  .technology-remark .technology-remark-p {
    font-size: 24px;
    text-align: left;
  }

  .technology-remark .technology-remark-flex {
    justify-content: flex-start;
    font-size: 16px;
    margin-top: 22px;
  }
}
</style>
<section class="section-box">
  <div class="technology-remark mini-cont">
    <div class="jp-container">
      {%- if section.settings.text != blank -%}
        <h3 class="technology-remark-h3">{{ section.settings.text }}</h3>
      {%- endif -%}
      {%- if section.blocks.size > 1 -%}
        <div class="technology-remark-arraws">
          <div class="technology-remark-arraw technology-remark-arraw-prev">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
              <path fill-rule="evenodd" clip-rule="evenodd"
