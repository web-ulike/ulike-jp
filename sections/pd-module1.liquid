            <img src="{{ block.settings.product_code |image_url }}" alt="" class="code_md1">
             {%- endif -%}
          </div>
          <div class="pd_module1-price">
            <div class="md1_price-left">
              <div class="md1_price-left-1">{{ block.settings.text_1 }}</div>
              <div class="md1_price-left-2">{{ block.settings.text_2 }}</div>
            </div>
            <div class="md1_price-right">{{ block.settings.text_3 }}</div>
          </div>
        </a>
        {%- endfor -%}

        

      </div>
