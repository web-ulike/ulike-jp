<script>
    if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      init_scroll{{ section.id | replace: "template--", "" }}();
    });
  } else {
    init_scroll{{ section.id | replace: "template--", "" }}();
  }
  function init_scroll{{ section.id | replace: "template--", "" }} () {
     const marqueeContent = document.getElementById('pd_module1-wrapper');
    const marqueeItems = Array.from(marqueeContent.children);
    marqueeContent.append(...marqueeItems.map(item => item.cloneNode(true)));
    marqueeContent.addEventListener('animationiteration', () => {
      marqueeContent.style.animation = 'none';
      marqueeContent.offsetHeight;
      marqueeContent.style.animation = '';
    });
  }
</script>
