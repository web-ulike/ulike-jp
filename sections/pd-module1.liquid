    <div class="pd_cust-container1 to-top">
      <div class="pd_module1-wrapper" id="pd_module1-wrapper">

        {%- for block in section.blocks -%}
        <a href="{{ block.settings.link_url }}" class="pd_module1-item">
           {%- if block.settings.image_tle -%}
          <div class="pd_module1-tle">
