<style>
   #shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color }};
    --section-background: {{ section.settings.background }};
    background:var(--section-background);
  }
    .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.6);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
  }
}
/* pd_module1-box start*/
.pd_module1-box{
  {% if section.settings.bg_image != blank %}
      background: #80D9EF url({{ section.settings.bg_image | image_url }}) no-repeat center;
      background-size: cover;
  {% endif %}
}
.pd_module1-wrapper{
  display: flex;
  gap: 33px;
  animation: marquee 10s linear infinite;
}
.pd_module1-item{
  /* flex: 1; */
  text-align: center;
  display:block;
}
.pd_module1-tle{
  margin-bottom: 23px;
  text-align: center;
}
.pd_module1-tle img{
  max-width: 187px;
  margin: 0 auto;
}
.pd_module1-img{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 286px;
height: 286px;
flex-shrink: 0;
  border-radius: 286px;
border: 3px solid #F4F431;
background: #FFF;
    position: relative;      
}
.pd_module1-img img{
  display: block;
  width: 100%;
  max-width: 83px;
}
.pd_module1-img .code_md1{
  position: absolute;
    right: 0;
    top: 0;
    width: 100%;
  max-width: 100px;
  transform: translate(29%,-9%);
}
.pd_module1-price{
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10px;
  margin-top: 15px;
}
.md1_price-left{
  text-align: left;
}
.md1_price-left .md1_price-left-1{
  font-size: 16px;
font-style: normal;
font-weight: 400;
line-height: 1.3;
} 
.md1_price-left .md1_price-left-2{
  font-size: 16px;
font-style: normal;
font-weight: 400;
line-height: 1.3;
letter-spacing: 1.44px;
text-decoration: line-through;
}
.md1_price-right{
  color: #DE004D;
font-size: 38px;
font-style: normal;
font-weight: 400;
line-height: 1.3;
}
.md1_price-right strong{
  color: #DE004D;
font-size: 16px;
font-style: normal;
font-weight: 400;
line-height: 1.3;
letter-spacing: 1.44px;
}
  .pd_module1-box {
    position: relative;
}
  .svg_box {
    max-width: 940px;
    padding: 0 20px;
    margin: 0 auto;
    position: absolute;
    height: 100%;
    width: 100%;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    /* padding-bottom: 100%; */
    top: 0;
}
  svg.md1_svg1 {
    position: absolute;
    left: -41%;
    top: 85px;
}
  svg.md1_svg2 {
    position: absolute;
    right: -10%;
    bottom: 66px;
}
  .pd_cust-container1{
        max-width: 1250px;
    width: 100%;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    overflow: hidden;
  }
  .pd_module1-wrapper:hover{
    animation-play-state: paused;
  }
@keyframes marquee {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-100%);
      }
    }
  @media (max-width: 992px) {
    .svg_box{
      display:none;
    }
  }

@media (max-width: 765px) {
  .pd_module1-box {
   padding-left: 20px;
    {% if section.settings.mobile_bg_image != blank %}
      background: #80D9EF url({{ section.settings.mobile_bg_image | image_url }}) no-repeat center;
  {% endif %}
}
.pd_module1-wrapper{
  gap: 26px;
        animation: marquee 4s linear infinite;
}
.pd_module1-img{
  width: 143px;
  height: 143px;
}
.pd_module1-img img{
  max-width: 42px;
}
.pd_module1-tle{
  max-width: 93px;
  margin: 0 auto 13px;
}
.md1_price-left .md1_price-left-1{
  font-size: 8px;
}
.md1_price-right{
  font-size: 19px;
}
.md1_price-right strong{
  font-size: 10px;
}
.md1_price-left .md1_price-left-2{
  font-size: 8px;
}
        .pd_module1-img .code_md1{
        max-width:50px;
        }
        .pd_module1-tle img {
    max-width: 93px;
}
}
/* pd_module1-box end*/
