    </div>
  </div>
</div>
<script src="{{ 'swiper-bundle.min.aio.min.js' | asset_url }}"></script>
<script>
      /*或者*/
    var thumbsSwiper = new Swiper('#thumbs--{{ section.id }}',{
      spaceBetween: 10,
      slidesPerView: 4,
      watchSlidesVisibility: true,/*避免出现bug*/
      drag: false
    })
    var gallerySwiper = new Swiper('#gallery--{{ section.id }}',{
      spaceBetween: 10,
      loop:true,
      thumbs: {
        swiper: thumbsSwiper,
      },
      navigation: {
          nextEl: '.swiper-button-next-custom',
          prevEl: '.swiper-button-prev-custom'
      }
    })
</script>
