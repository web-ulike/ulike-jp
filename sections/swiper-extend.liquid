{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
<style>
#shopify-section-{{ section.id }} {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
.banner-part .image-fit {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    max-width: 100%;
}
    .banner-part .swiper {
        width: 100%;
        height: 100%;
        z-index:0;
      }
  .banner-part .swiper div:empty{
    display:block;
  }
    .banner-part  .swiper-slide {
        font-size: 18px;
        height: auto;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        padding: 20px 20px 40px;
      }
    .banner-part.banner-extend-page .img-box{
        display: flex;
        cursor: pointer;
        position: relative;
      }
    .banner-part.banner-extend-page .img{
        display: flex;
         margin-right:30px;
      }
      .banner-part.banner-extend-page .img img {
        object-fit: contain;
    max-height: 60px;
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    font-family: "object-fit: cover";
    z-index: 1;
      }
  .banner-part.banner-extend-page .swiper-scrollbar-drag{
    background: #181818;
  }
  .banner-part .swiper-horizontal>.swiper-scrollbar,.banner-part .swiper-scrollbar.swiper-scrollbar-horizontal{
    height:2px;
  }
.banner-part .slideshow__image {
    position: relative;
    width: 100%;
}
.banner-part.banner-extend-page .swiper-button-prev-custom, .swiper-rtl .swiper-button-next-custom {
    left: 28px;
}
.banner-part.banner-extend-page .swiper-button-next-custom, .swiper-rtl .swiper-button-prev-custom {
    right: 28px;
}
.banner-part .swiper-thumbs {
    margin-bottom: -69px;
    z-index: 1;
}
.banner-part .swiper-thumbs .swiper-wrapper{
  justify-content: center;
  flex-wrap: wrap;
}
.banner-part .aplus-goto-btn{
  display: inline-block;
    margin: 7px 10px !important;
    cursor: pointer;
    border-radius: 30px;
    border: 2px solid #000;
    line-height: 2.5em;
    min-width: 200px;
    background-color: #fff;
    white-space: nowrap;
    color: #000;
    width: auto !important;
    padding: 0;
    text-align: center;
    font-size: 14px;
    font-weight: 600;
}
.banner-part .aplus-goto-btn:hover{
    background-color: #000;
    color: #fff;
}
.banner-part .aplus-goto-btn.swiper-slide-thumb-active{
  /*border-color: #fff;*/
    background-color: #000;
    color: #fff;
}
.banner-part .card-description-box {
   top: 50%;
    position: absolute;
    z-index: 100;
    background: rgba(0, 0, 0, 0.5);
    left: 18%;
    transform: translate(-50%, -50%);
    color: #fff;
    padding: 20px 50px;
}
.banner-part .card-description-box h3{
  font-size: 13px;
    line-height: 1.4em;
    font-weight: 300;
    margin:0;
    color:#fff;
}
.banner-part .card-description-box h1{
      font-size: 24px;
    line-height: 1.2em;
    color:#fff;
    margin:0;
}
.banner-part .card-description-box p{
  margin: 0;
}
.banner-part #gallery .swiper-slide{
  padding: 0;
  margin:0;
}
.banner-part .swiper-button-next-custom, .banner-part .swiper-button-prev-custom {
    position: absolute;
    top: 50%;
    width: 40px;
    height: 40px;
    margin-top: calc(0px - (var(--swiper-navigation-size)/ 2));
    z-index: 10;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
}

@media screen and (max-width: 768px){
  .banner-part.banner-extend-page{
    display: flex;
    flex-direction: column-reverse;
  }
  .banner-part .swiper-thumbs{
    margin-bottom:0;
    margin-top:20px;
  }
.banner-part .swiper-thumbs .swiper-wrapper{
  flex-direction: column;
  align-items: center;
}
.banner-part .aplus-goto-btn{
  padding: 9px 12px !important;
  line-height:1.3;
  width: fit-content !important;
  min-width: 220px;
  margin: 5px 10px !important;
}
.banner-part .card-description-box {
    bottom: 0;
    width: 100%;
    transform: none;
    left: 0;
    padding: 7.21px 24px;
    top: auto;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: end;
}
.banner-part .card-description-box h1{
  font-size: 18px;
  margin-right: 20px;
  /*margin-left: 20px;*/
  order: -1;
  display:flex;
}
.banner-part .card-description-box .aplus-p1{
  font-size: 12px;
  line-height: 1.3;
}
.banner-part .swiper-button-next-custom, .banner-part .swiper-button-prev-custom{
  display:none;
}
  .banner-part.banner-extend-page .img{
    margin-right:15px !important;
  }
  .banner-part.banner-extend-page .extend-img .image-fit{
    width:auto;
  }
}
</style>

<div class="banner-extend-page container banner-part section-{{ section.id }}-padding">
  <div class="swiper swiper-thumbs" id="thumbs--{{ section.id }}">
    {%- if section.settings.show_image_with_txt_carousel == true -%}
    <div class="swiper-wrapper" aria-live="polite" style="transition-duration: 0ms;">
      {%- for block in section.blocks -%}
      <div class="swiper-slide aplus-goto-btn"  style="margin-right: 10px;">
        {{ block.settings.title |  escape }}
      </div>
      {%- endfor -%}
    </div>
    <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
    {%- endif -%}
  </div>
  <div class="swiper mySwiper" id="gallery--{{ section.id }}">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        {%- assign image = block.settings.image -%}
        {%- assign mobile_image = block.settings.image_mobile -%}
        {%- if forloop.index > 2 -%}
          {%- assign loading_attribute_value = 'lazy' -%}
        {%- else -%}
          {%- assign loading_attribute_value = 'eager' -%}
        {%- endif -%}
      <div class="swiper-slide" style="width:auto">
        <div class="img-box">
          {% comment %} {{- block.settings.image | image_url: width: 2700 | image_tag: loading: 'lazy', draggable: true, class: 'logo-bar__image image-fit small-hide', sizes: '(min-width: 1600px) 750px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)', widths: '750,2700' -}}
          {%- if block.settings.image_mobile != blank -%}
            {{- block.settings.image_mobile | image_url: width: 680 | image_tag: loading: 'lazy', draggable: true, class: 'logo-bar__image image-fit large-up-hide', sizes: '(min-width: 1600px) 750px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)', widths: '680' -}}
          {%- endif -%} {% endcomment %}
           <div class="{% if mobile_image != blank %}hidden-pocket{% endif %}">
            {%- if image != blank -%}
              {{- image | image_url: width: 3000 | image_tag: loading: loading_attribute_value, draggable: false, class: 'slideshow__image', sizes: '100vw', widths: '600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000' -}}
            {%- else -%}
              {% capture image_name %}lifestyle-{% cycle '1', '2' %}{%- endcapture -%}
              {{- image_name | placeholder_svg_tag: 'slideshow__image slideshow__image--placeholder' -}}
            {%- endif -%}
          </div>

          {%- if mobile_image != blank -%}
            <div class="hidden-lap-and-up">
              {{- mobile_image | image_url: width: 3000 | image_tag: loading: loading_attribute_value, draggable: false, class: 'slideshow__image', sizes: '100vw', widths: '600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000' -}}
            </div>
          {%- endif -%}


          {%- if section.settings.show_image_with_txt_carousel == true -%}
            <div class="card-description-box">
              <h3 class="aplus-p3">  {{ block.settings.subTitle |  escape }} </h3>
              <h1 class="aplus-h1 a-text-bold"> {{ block.settings.title |  escape }} </h1>
              <p class="description aplus-p1">{{ block.settings.description |  escape }} </p>
            </div>
          {%- endif -%}
        </div>
      </div>
      {%- endfor -%}
    </div>
    <div class="swiper-button-prev-custom">
      <svg fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" class="design-iconfont">
        <mask id="fo23klz2p__3cpv3dnfha" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="5" y="4" width="31" height="31">
          <path transform="matrix(-1 0 0 1 36 4)" fill="#D9D9D9" d="M0 0H31V31H0z"/>
