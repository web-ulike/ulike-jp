    },

     {
      "type": "select",
      "id": "tle_position",
      "label": "Mobile Txt position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
           {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Images"
        },
          {
          "type": "image_picker",
          "id": "mb_product_image",
          "label": "Mobile Product Images"
        },
          {
          "type": "image_picker",
          "id": "tag_image",
          "label": "Tag Images"
        },
           {
      "type": "text",
      "id": "tle",
      "label": "Title"
    },
            {
      "type": "text",
      "id": "subtle",
      "label": "subTitle"
    },
          {
      "type": "richtext",
      "id": "des",
      "label": "Descripte"
    },
            {
      "type": "text",
      "id": "price",
      "label": "Price"
    },
            {
      "type": "text",
      "id": "ori_price",
      "label": "Origin Price"
    },
            {
      "type": "text",
      "id": "add_bt_txt",
      "label": "Add Button Text"
    },
    {
      "type": "text",
      "id": "buy_txt",
      "label": "Buy Button Text"
    },
    {
      "type": "url",
      "id": "buy_link_url",
