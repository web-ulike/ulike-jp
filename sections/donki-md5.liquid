    },
        {
          "type": "image_picker",
          "id": "block1_image",
          "label": "Block1 Images"
        },
     {
      "type": "richtext",
      "id": "block1_note",
      "label": "Block1 Note"
    },

 {
      "type": "richtext",
      "id": "block2_tle",
      "label": "Block2 Title"
    },
 {
          "type": "image_picker",
          "id": "block2_image",
          "label": "Block2 Images"
        },

 {
      "type": "richtext",
      "id": "block3_tle",
      "label": "Block3 Title"
    },
     {
      "type": "richtext",
      "id": "block3_txt",
      "label": "Block3 Text"
    },
     {
      "type": "richtext",
      "id": "block3_round_text",
      "label": "Block3 Round ext"
    },
     {
          "type": "image_picker",
          "id": "block3_image",
