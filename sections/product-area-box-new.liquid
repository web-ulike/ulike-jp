  }
  .product-area-box .product-area-msg {
    line-height: 1.5;
    margin-top: 10px;
  }

  .product-area-box .product-area-pagination {
    display: block;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 50px;
    top: auto;
    display: flex;
    align-items: center;
    justify-content: center;
