<style>
.product-area-box {
  position: relative;
  z-index: 1;
  padding: 50px 0;
  background: #fff;
}
.product-area-box .product-area-list {
  display: flex;
  gap: 20px;
}
.product-area-box .product-area-first {
  padding: 50px 0 24px 0;
  background: linear-gradient(
    180deg,
    #e7e5fe 0%,
    #fbfaff 33.21%,
    #fff 64.3%,
    #f9f9f9 100%
  );
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
}
.product-area-box .product-area-item {
  position: relative;
  overflow: hidden;
  flex: 1;
  z-index: 1;
}

.product-area-box .product-area-tag {
  position: absolute;
  background: #e7004c;
  font-size: 12px;
  font-family: var(--font-heading-family);
  color: #fff;
  top: 15px;
  left: 15px;
  z-index: 3;
  padding: 8px 20px;
  line-height: 1;
  overflow: hidden;
}

.product-area-box .product-area-tag::before {
  position: absolute;
  content: '';
  display: block;
  width: 200%;
  height: 200%;
  z-index: 2;
  background: linear-gradient(
    -45deg,
    rgba(255, 255, 255, 0) 40%,
    rgba(255, 255, 255, 0.5) 50%,
    rgba(255, 255, 255, 0) 60%
  );
  animation: scanning 3s linear infinite;
}
@keyframes scanning {
  0% {
    transform: translate(-100%, -100%);
  }
  100% {
    transform: translate(100%, 100%);
  }
}

.product-area-box .product-area-img-list {
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.product-area-box .product-area-img-item {
  width: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  display: none;
}
.product-area-box .product-area-img-item.active {
  position: relative;
  display: block;
}
.product-area-box .product-area-img-item.close {
  z-index: 3;
  transition: width 0.6s ease;
  width: 0%;
  height: 100%;
  display: block;
}
.product-area-box .product-area-img-item.close .img {
  width: auto;
  max-width: none;
  height: 100%;
}
.product-area-box .product-area-item .img {
  display: block;
  position: relative;
  z-index: 1;
  width: 100%;
}

.product-area-box .product-area-item .h-show {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0;
  transition: opacity 0.4s ease;
}

.product-area-box .product-area-item .h-hide {
  transition: opacity 0.4s ease;
}

@media (min-width: 991px) {
  .product-area-box{
    padding-top:30px;
  }
  .product-area-box .product-area-img-item:hover .h-hide {
    opacity: 0;
  }
  
  .product-area-box .product-area-img-item:hover .h-show {
    opacity: 1;
  }
  .product-area-box .product-area-btn-item:hover {
    background: #3f3636;
  }
}

.product-area-box .product-area-cont {
  background: #f8f8f8;
  padding: 32px 24px 24px;
  position: relative;
  margin-top:-3px;
}

.product-area-box .product-area-first .product-area-cont {
  background: none;
  padding: 0;
}

.product-area-box .product-area-dot {
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 3;
  display: flex;
  gap: 12px;
}

.product-area-box .product-area-dot-item {
  position: relative;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  cursor: pointer;
  background: linear-gradient(to bottom, #fff 80%, rgba(0, 0, 0, 0.1) 100%);
  box-shadow: inset 0px 0px 2px 1px rgba(0, 0, 0, 0.05),
    inset 0px 0px 2px 1px rgba(255, 255, 255, 0.05);
}

.product-area-box .product-area-dot-item::after {
  border-radius: inherit;
  box-shadow: inset 0 1px 1px rgb(0 0 0 / 10%);
  content: '';
  display: block;
  height: inherit;
  position: absolute;
  width: inherit;
}

.product-area-box .product-area-dot-item::before {
  position: absolute;
  content: '';
  display: block;
  width: 120%;
  height: 120%;
  border-radius: 50%;
  border: 1px solid #d9d9d9;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.product-area-box .product-area-dot-item.active::before {
  border-color: #000;
}

.product-area-box .product-area-cont-top {
  position: relative;
}

.product-area-box .product-area-h3 {
  font-size: 38px;
  font-family: var(--font-heading-family);
  color: #181a1d;
  line-height: 1.2;
  margin: 0;
  letter-spacing: -0.5px;
  font-weight: normal;
}

.product-area-box .product-area-p {
  color: #181a1d;
  font-size: 14px;
  line-height: 1.7;
  margin-top: 12px;
}
.product-area-box .product-area-p strong{
font-style:normal;
font-weight:normal;
}
.product-area-box .product-area-first .product-area-p {
  margin-top: 8px;
}

.product-area-box .product-area-star {
  position: absolute;
  right: 0;
  top: 0px;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  color: #190a0a;
  font-size: 14px;
  line-height: 1;
  font-family: var(--font-heading-family);
  cursor: pointer;
}

.product-area-box .product-area-star p {
  margin: 0;
}
.product-area-box .product-area-star strong {
  font-weight: normal;
  text-decoration: underline;
}

.product-area-box .product-area-btn {
  display: flex;
  justify-content: center;
  max-width:700px;
  margin:0 auto;
  margin-top: 24px;
  overflow: hidden;
}

.product-area-box .product-area-btn-item {
  background: #000;
  flex: 1;
  color: #fff;
  font-size: 14px;
  height: 58px;
  line-height: 1;
  border-radius: 2px;
  font-family: var(--font-heading-family);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s ease;
  gap:20px;
}
.product-area-box .product-area-btn-item p{
  margin:0;
}
.product-area-box .product-area-btn-item p strong {
  font-weight: normal;
  margin-left: 20px;
}


.product-area-box .product-area-msg {
  color: #65666a;
  text-align: center;
  font-size: 12px;
  line-height: 1.6;
  margin-top: 16px;
}
.product-area-box .product-area-first {
  text-align: center;
}
.product-area-box .product-area-first .product-area-tag {
  position: relative;
  display: inline-block;
  top: auto;
  left: auto;
}

.product-area-box .product-area-first .product-area-h3 {
  font-size: 76px;
}

.product-area-box .product-area-first .product-area-star {
  position: relative;
  right: auto;
  top: auto;
  justify-content: center;
  margin-top: 15px;
}

.product-area-box .product-area-first .product-area-item {
  max-width: 700px;
  margin: 0 auto;
}

.product-area-box .product-area-first .product-area-dot {
  position: relative;
  bottom: auto;
  right: auto;
  justify-content: center;
  margin-top: 16px;
}

.product-area-box .product-area-first .product-area-img-list {
  max-width: 500px;
  margin: 0 auto;
  margin-top: 24px;
}

.product-area-box .product-area-pagination {
  display: none;
}

.product-area-box .product-area-remark {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 5;
  display: none;
}

.product-area-box .product-area-remark-cont {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  padding: 30px 21px;
  width: 71.875%;
  max-width: 460px;
}

.product-area-box .product-area-remark-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #190a0a;
  font-size: 16px;
  line-height: 2.25;
  letter-spacing: 0.8px;
  border-bottom: 1px solid #756b6e;
}

.product-area-box .product-area-remark-close {
  width: 27px;
  height: 27px;
  cursor: pointer;
}

.product-area-box .product-area-remark-close svg {
  width: 100%;
  height: auto;
  display: block;
}

.product-area-box .product-area-remark-img {
  display: flex;
  flex-direction: column;
  gap: 24px;
  margin: 40px 0;
}

.product-area-box .product-area-remark-img-item {
  display: flex;
  align-items: center;
  gap: 2px;
  color: #190a0a;
  font-size: 16px;
  line-height: 1;
  letter-spacing: 0.8px;
  justify-content: space-between;
}

.product-area-box .product-area-remark-img-item span {
  width: 11px;
  display: block;
}

.product-area-box .product-area-remark-img-item svg {
  display: block;
}

.product-area-box .product-area-remark-progress {
  flex: 1;
  height: 24px;
  position: relative;
  background: #f5f4f4;
  margin-left: 6px;
}

.product-area-box .product-area-remark-progress::before {
  position: absolute;
  content: '';
  display: block;
  left: 0;
  top: 0;
  height: 100%;
  background: #ffcc02;
  width: 0;
  transition: width 0.4s ease;
}

.product-area-box .show-progress .product-area-remark-progress::before {
  width: var(--progress-num);
}

.product-area-box .product-area-remark-link {
  display: inline-block;
  color: #190a0a;
  font-size: 14px;
  line-height: 1.5;
  letter-spacing: 0.7px;
  background: linear-gradient(#000, #000) no-repeat;
  background-size: 100% 1px;
  background-position: left bottom;
  transition: all 0.3s ease;
  cursor: pointer;
}
@media (min-width: 991px) {
  .product-area-box .product-area-remark-link:hover {
    color:#3F3636;
    background: linear-gradient(#3F3636, #3F3636) no-repeat;
