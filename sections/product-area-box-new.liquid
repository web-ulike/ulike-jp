<script>
  if (window.innerWidth < 991) {
    let swiper{{ section.id | replace: "template--", "" | replace: "__", ""  }} = new Swiper(".product-area-swiper", {
      slidesPerView: "auto",
      spaceBetween: 16,
      pagination: {
        el: ".product-area-pagination",
        clickable: true,
      },
    });
  }
  window.addEventListener('load', function () {
    $('html').on('click', '.product-area-box .product-area-dot-item', function (event) {
      event.preventDefault();
      event.stopPropagation();
      let $this = $(this)
      let index = $this.index()
      if ($this.hasClass('active')) return
      if ($this.closest('.product-area-first').length) {
        $this.closest('.product-area-first').css('background', $this.attr('data-color'))
      }
      $this.closest('.product-area-item').find('.product-area-img-item.close').removeClass('close')
      $this.addClass('active').siblings().removeClass('active')
      $this.closest('.product-area-item').find('.product-area-img-item.active').removeClass('active').addClass('close')
      $this.closest('.product-area-item').find('.product-area-img-item').eq(index).addClass('active')
      setTimeout(() => {
        $this.closest('.product-area-item').find('.product-area-img-item.close').removeClass('close')
      }, 600)
    })
    
    $('.product-area-box .product-area-star').click(function (e) {
      e.stopPropagation()
      e.preventDefault();
      $('.product-area-mp').removeClass('show-progress').find('.product-area-remark').fadeOut()
      $(this).closest('.product-area-mp').find('.product-area-remark').fadeIn(300, () => {
        $(this).closest('.product-area-mp').addClass('show-progress')
      })
    })

    $('.product-area-box .product-area-remark').click(function(e){
      e.stopPropagation()
      e.preventDefault();
      $('.product-area-box .product-area-remark').fadeOut(300, () => {
        $('.product-area-box .product-area-mp').removeClass('show-progress')
      })
    })
    $('.product-area-box .product-area-remark-link').click(function(e){
      e.stopPropagation()
      e.preventDefault();
        let href = $(this).data('href');
        if (href) {
            window.location.href = href;
        }
      $('.product-area-box .product-area-remark').fadeOut(300, () => {
        $('.product-area-box .product-area-mp').removeClass('show-progress')
      })
    });


    
    $(document).on('click', function () {
      $('.product-area-box .product-area-remark').fadeOut(300, () => {
        $('.product-area-box .product-area-mp').removeClass('show-progress')
      })
    })
  });
  
</script>
