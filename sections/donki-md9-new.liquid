<style>
     #shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color }};
    --section-background: {{ section.settings.background }};
    background:  {% if section.settings.bg_image != blank %}url('{{ section.settings.bg_image | image_url  }}') {% endif %} var(--section-background); no-repeat 100% 100%;
    background-size: cover;
  }
  @media only screen and (min-width: 768px) {
  }
@media only screen and (min-width: 390px) {
 
}
  .donki-md9-new__wrapper{
    padding: 60px 15px;
    color: #FFF;
  }
  .md9_new_tle{
    font-size: 15px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-align: center;
  }
  .md9_new_tle strong{
   color:  #E0004D;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .md9_img__box{
    margin-top:16px;
    display:flex;
    gap:10px;
  }
  .md9_img__box img{
    flex:1;
    display:block;
  }
  .md9_new_note{
    font-size: 8px;
font-style: normal;
font-weight: 300;
line-height: normal;
    margin-top:40px;
  }
</style>
  <section>
     <div class="donki-md9-new__wrapper">
       <div class="md9_new_tle to-top">{{ section.settings.tle }}</div>

      <div class="md9_img__box to-top">
         {%- if section.settings.logo_image -%}
        <img src="{{ section.settings.logo_image | image_url }}" alt="" class="donki_md1-bg scale_img" width="{{ section.settings.logo_image.width }}" height="{{ section.settings.logo_image.height }}">
        {%- endif -%}
        {%- if section.settings.logo_image1 -%}
        <img src="{{ section.settings.logo_image1 | image_url }}" alt="" class="donki_md1-bg scale_img" width="{{ section.settings.logo_image1.width }}" height="{{ section.settings.logo_image1.height }}">
        {%- endif -%}
      </div>
        <div class="md9_new_note to-top">{{ section.settings.note }}</div>
    </div>
    
  </section>
{% schema %}
{
  "name": "Donki Md9 New",
  "class": "shopify-section--donki-md9-new", 
  "settings": [
     {
      "type": "richtext",
      "id": "tle",
      "label": "Title"
    },
      {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Images"
        },
    
      {
          "type": "image_picker",
          "id": "logo_image1",
          "label": "Logo Images1"
        },
     {
      "type": "richtext",
      "id": "txt",
      "label": "Text"
    },
     {
      "type": "richtext",
      "id": "note",
      "label": "Note"
    },
    {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background Images"
        },

      {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#F9F8F6"
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "Donki Md9 New"
    }
  ]
}
{% endschema %}