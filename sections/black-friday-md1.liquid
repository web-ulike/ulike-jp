<style>
    #shopify-section-{{ section.id }} {
    --section-background: {{ section.settings.background }};
    --txt_color: {{ section.settings.txt_color }};
    --rich_txt_color: {{ section.settings.rich_txt_color }};
      {% if section.settings.background_image != blank %}
         --background-image: url({{ section.settings.background_image | img_url: '3840x1176' }});
        background-image: var( --background-image);
      {% else %}
        background-color: var(--section-background);
      {% endif %}
  }
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px);
      padding-bottom: calc({{ section.settings.padding_bottom }}px);
    }
    @media screen and (max-width: 768px){
      #shopify-section-{{ section.id }} {
      {% if section.settings.mobile_background_image != blank %}
        --background-image: url({{ section.settings.mobile_background_image | img_url : '750x1230' }});
      {% endif %}
      }
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * 0.6);
      padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
    }
  }

.black-md4__box {
    position: relative;
}
.black-md4__cnt{
      position: absolute;
    top: 0;
    width: 100%;
    z-index: 1;
    color: #FFF;
  padding:12vw;
}
  .black-md4__cnt .black-md4_tle{
    margin-bottom: 13.3vw;
    font-size: 5.86vw;
    font-style: normal;
    font-weight: 400;
    line-height: 1.5;
  }
    .black-md4__cnt .black-md4_tle-box{
    font-size: 3.733vw;
    font-style: normal;
    font-weight: 300;
    line-height: 170%;
    }
/* md4__inner start*/

    .md3_img {
        width: 85%;
    }  
  .md3-item {
      padding: 34vw 5.6vw 5.6vw 5.6vw;
}
@media only screen and (min-width: 768px) {
   .md3-item {
        padding: 205px 28px 28px 28px;
    }
  .black-md4__cnt .black-md4_tle{
        margin-bottom: 67px;
        font-size: 29px;
  }
   .black-md4__cnt .black-md4_tle-box{
  font-size: 19px;
    }
  .black-md4__cnt{
      position: absolute;
    top: 0;
    width: 100%;
    z-index: 1;
    color: #FFF;
  padding:52px;
}
      .md3_img {
        width: 100%;
    }  
}
/* md4__inner end*/
</style>
  <section>
    
    <div class="black-md4__box">
      
      <div class="scale_img black-md4__img">
        {%- if section.settings.image -%}
         <img src="{{ section.settings.image | image_url }}" alt="">
        {%- endif -%}
      </div>
      
      <div class="black-md4__cnt">
        <div class="black-md4_tle to-top" style="transition-delay: 105ms;">{{ section.settings.txt_1 }}</div>
      <div class="black-md4_tle-box to-top" style="transition-delay: 205ms;">
      {{ section.settings.txt_2 }}
      </div>
        
      </div>
    </div>
  </section>
{% schema %}
{
  "name": "Black Friday Md1",
  "class": "shopify-section--black-md4", 
  "settings": [
     {
          "type": "checkbox",
          "id": "show_svg",
          "label": "Show Svg",
         "default":false
        },
    {
          "type": "image_picker",
          "id": "image",
          "label": "Images"
        },
     {
          "type": "image_picker",
          "id": "fall_image",
          "label": "Fall Images"
        },
     {
      "type": "richtext",
      "id": "txt_1",
      "label": "Text 1"
    },
      {
      "type": "richtext",
      "id": "txt_2",
      "label": "Text 2"
    },
    {
      "type": "color",
      "id": "txt_color",
      "label": "Text color",
      "default": "#182E67"
    },
     {
      "type": "color",
      "id": "rich_txt_color",
      "label": "Rich Text color",
      "default": "#000000"
    },
      {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
      {
          "type": "image_picker",
          "id": "mobile_background_image",
          "label": "Mobile Background Image"
        },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#F3F0E9"
    },
       {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "Black Friday Md1"
    }
  ]
}
{% endschema %}