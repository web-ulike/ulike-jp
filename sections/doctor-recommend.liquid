<style>

#shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color.red }}, {{  section.settings.text_color.green }}, {{  section.settings.text_color.blue }};
    --section-background: {{ section.settings.background.red }}, {{ section.settings.background.green }}, {{ section.settings.background.blue }};
    --color-border: 255, 255, 255;
    /* background: rgb(var(--section-background, var(--background)));  */
  }
     .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.mobile_padding_top }}px);
    padding-bottom: calc({{ section.settings.mobile_padding_bottom }}px );
  }
}
.doctor-recommend{
  overflow: hidden;
}
.doctor-recommend h3{
  color: #000;
font-size: 32px;
font-style: normal;
font-weight: 500;
line-height: 150%;
letter-spacing: 0.64px;
}
.doctor-inner{
  display: flex;
  gap: 91px;
}
.doctor-tb{
  margin-bottom: 60px;
}

.doctor-list .doctor-top{
text-align: center;
 padding: 40px 20px 32px;
  background: linear-gradient(180deg, rgba(235, 246, 255, 0.70) 0%, #FFF 100%);
}
.doctor-list .doctor-top img{
max-width: 244px;
margin: 0 auto;
}
.doctor-top .doctor-name{
color: #000;
text-align: center;
font-size: 32px;
font-style: normal;
font-weight: 500;
line-height: 150%;
letter-spacing: 0.64px;
margin-top: 19px;
margin-bottom: 9px;
}
.doctor-top .doctor-name strong{
  font-size: 24px;
  font-style: normal;
font-weight: 500;
line-height: 150%;
letter-spacing: 0.48px;
}
.doctor-top .doctor-txt{
  color: #000;
text-align: center;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 130%; 
letter-spacing: 0.36px;
}
.doctor-bt{
  display: flex;
  gap: 20px;
  padding: 47px 20px;
}
.doctor-tb-rt{
  display: none;
  gap: 20px;
}
.doctor-tb-rt svg{
  cursor: pointer;
}
.doctor-tb{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.doctor-svg{
  cursor: pointer;
}
.doctor-list {
    flex: 1;
}
  .doctor-bt .doctor-des,.doctor-bt .doctor-des1{
  color: #000;
font-size: 16px;
font-style: normal;
font-weight: 400;
line-height: 130%;
letter-spacing: 0.32px;
}
@media (max-width: 768px){
  .doctor-tb-rt{
  display: flex;
}
  .doctor-inner {
    gap: 0px;
}
.doctor-list .doctor-top img {
    max-width: 131px;
}
.doctor-recommend h3{
  font-size: 24px;
}
.doctor-tb{
  margin-bottom: 35px;
}
.doctor-top .doctor-name {
font-size: 20px;
    margin-top: 6px;
    margin-bottom: 6px;
}
.doctor-top .doctor-name strong{
  font-size: 14px;
}
.doctor-top .doctor-txt{
  font-size: 12px;
}
.doctor-list .doctor-top{
  padding: 20px;
}
.doctor-bt {
    gap: 12px;
    padding: 30px 20px;
}
.doctor-svg svg{
  transform: scale(0.5);
}
.doctor-bt .doctor-des,.doctor-bt .doctor-des1{
  font-size: 14px;
}
.doctor-list {
    flex: none;
}
}
</style>
 <section class="section-{{ section.id }}-padding">
 <div class="doctor-recommend to-top">
                <div class="jp-container">
                   <custom-swiper
              slides-per-view="1.2" 
              space-between="20" 
              loop="false" 
              centered-slides="false"
              pagination="false"
              navigation="true"
              disable-on="desktop"
              breakpoints='{"768":{"slidesPerView": 1,"spaceBetween": 20}}'
            >
                  <div class="doctor-tb">
                     <h3>{{ section.settings.tle }}</h3>
                     <div class="doctor-tb-rt">
                      <svg xmlns="http://www.w3.org/2000/svg" width="25" height="19" viewBox="0 0 25 19" fill="none" class="swiper-prev">
