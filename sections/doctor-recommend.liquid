     {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Images"
        },
               {
      "type": "richtext",
      "id": "tle",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "des",
      "label": "Descripte"
    },
          {
      "type": "richtext",
      "id": "txt",
      "label": "Text"
    },
           {
      "type": "richtext",
      "id": "txt1",
      "label": "Text1"
    }
        ]
      }
  ],
  "presets": [
    {
      "name": "doctor recommend"
    }
  ]
}
