                        </defs>
                      </svg>
                     </div>
                  </div>
                  <div class="swiper-container">
                    <div class="doctor-inner swiper-wrapper">
                     

                       {%- for block in section.blocks -%}
                      <div class="doctor-list swiper-slide">
                        <div class="doctor-top">
                         <picture>
                         {%- if block.settings.image_mobile -%}
                            <source media="(max-width: 767px)" srcset="{{ block.settings.image_mobile | image_url }}">
                                 {%- endif -%}
                             {%- if block.settings.image -%}
                            <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}">
                            {%- endif -%}
                       </picture>
                          <div class="doctor-name">{{ block.settings.tle }}</div>
                          <div class="doctor-txt">{{ block.settings.des }}</div>
                        </div>
                        <text-collapse-new max-length="50">
                        <div class="doctor-bt">
                          <div class="doctor-des">{{ block.settings.txt }}</div>
                          <div class="doctor-des1" style="display: none;">{{ block.settings.txt1 }}</div>
                          <div class="doctor-svg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 50 50" fill="none">
                              <circle cx="25" cy="25" r="24.1071" stroke="#E0004D" stroke-width="1.78571"/>
                              <path d="M12.5 23.5303H37.5V26.0303H12.5V23.5303Z" fill="#E0004D"/>
                              <path d="M23.5303 12.5H26.0303V37.5H23.5303V12.5Z" fill="#E0004D"/>
                            </svg>
                          </div>
                        </div>
                      </text-collapse-new>
                      </div>
                       {%- endfor -%}
                      
                                
                    </div>
                  </div>
                  </custom-swiper>
                </div>
              </div>
  </section>
