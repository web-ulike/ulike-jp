          "label": "Images Text"
        },

  {
          "type": "image_picker",
          "id": "product_image1",
          "label": "Product Image1"
        },
     {
          "type": "image_picker",
          "id": "mobile_product_image1",
          "label": "Mobile Product Image1"
        },

     {
          "type": "image_picker",
          "id": "product_image2",
          "label": "Product Image2"
        },

    {
          "type": "image_picker",
          "id": "mobile_product_image2",
          "label": "Mobile Product Image2"
