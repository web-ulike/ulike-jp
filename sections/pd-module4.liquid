<style>
   #shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color }};
    --section-background: {{ section.settings.background }};
    background:var(--section-background);
  }
    .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.6);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
  }
}
/* pd_module4-box start*/
.pd_module4-box{
 {% if section.settings.bg_image != blank %}
      background:#ADE3F2 url({{ section.settings.bg_image | image_url }}) no-repeat center;
      background-size: cover;
  {% endif %}
}
.pd_module4-wrapper{
  text-align: center;
}
.pd_module4-wrapper .pd_md4-tle{
  color:  #E0004D;
font-size: 40px;
font-style: normal;
font-weight: 400;
line-height: normal;
letter-spacing: 0.8px;
margin-bottom: 42px;
}
.pd_module4-wrapper .pd_md4-cnt {
  display: flex;
  gap: 33px;
}
.pd_md4-txt{
  color: #000;
text-align: center;
font-size: 20px;
font-style: normal;
font-weight: 400;
line-height: 1.5;
letter-spacing: 0.4px;
margin-top: 36px;
}
        .pd_module4-box .pd_cust-container{
         overflow: visible;
        }
        .md4_svg{
        position: absolute;
        }
        .md4_svg1{
        left:0;
        top:0;
          transform: translateX(-100%);
        }
    .md4_svg2{
        right:0;
        bottom:0;
          transform: translate(100%);
        }
  .pd_md4-cnt .pd_md4-item{
    flex: 1;
  }
@media (max-width: 765px) {
  .pd_module4-box{
      {% if section.settings.mobile_bg_image != blank %}
      background: #ADE3F2 url({{ section.settings.mobile_bg_image | image_url }}) no-repeat center;
  {% endif %}
  }
  .pd_module4-wrapper .pd_md4-tle{
    font-size: 17px;
    margin-bottom: 47px;
  }
  .pd_module4-wrapper .pd_md4-cnt{
    flex-direction: column;
    gap: 25px;
  }
  .pd_md4-item {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .pd_md4-txt{
    margin: 0;
    font-size: 14px;
    padding: 0 20px;
  }
  .pd_md4-cnt .pd_md4-item:nth-child(2n){
    flex-direction: row-reverse;
  }
  .pd_md4-cnt .pd_md4-item:nth-child(2n) .pd_md4-txt{
    padding-left: 0;
  }
  .md4_svg1{
    max-width:79px;
    transform: translateX(20px);
  }
   .md4_svg2{
    max-width:33px;
    transform: translateX(-100%);
  }
}
/* pd_module4-box end*/
</style>
 <section>
    <div class="pd_module4-box section-{{ section.id }}-padding">
    <div class="pd_cust-container">
        {%- if section.settings.image_svg1 -%}
       <img src="{{ section.settings.image_svg1 | image_url }}" alt="" class="md4_svg md4_svg1">
       {%- endif -%}
      {%- if section.settings.image_svg2 -%}
       <img src="{{ section.settings.image_svg2 | image_url }}" alt="" class="md4_svg md4_svg2">
         {%- endif -%}
      <div class="pd_module4-wrapper">
        <div class="pd_md4-tle to-top">{{ section.settings.tle }}</div>
        <div class="pd_md4-cnt">
          {%- for block in section.blocks -%}
          <div class="pd_md4-item to-top">
            {%- if block.settings.product_image -%}
            <div class="pd_md4-img">
              <img src="{{ block.settings.product_image |image_url }}" alt="">
            </div>
            {%- endif -%}
            <div class="pd_md4-txt">{{ block.settings.txt }}</div>
          </div>
          {%- endfor -%}

        </div>
      </div>
    </div>
  </div>
  </section>
{% schema %}
{
  "name": "Pd Module 4",
  "class": "shopify-section--pd-md4", 
  "settings": [
      {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background Image"
        },
     {
          "type": "image_picker",
          "id": "mobile_bg_image",
          "label": "Mobile Background Image"
        },
      {
          "type": "image_picker",
          "id": "image_svg1",
          "label": "Svg1"
        },
      {
          "type": "image_picker",
          "id": "image_svg2",
          "label": "Svg2"
        },
     {
      "type": "text",
      "id": "tle",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    }
  ],
  "blocks": [
    {
        "type": "item",
        "name": "item",
        "settings": [
    {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
             {
      "type": "text",
      "id": "txt",
      "label": "Text"
    }
        ]
      }
  ],
  "presets": [
    {
      "name": "Pd Module 4"
    }
  ]
}
{% endschema %}