    <script src="{{ 'swiper-bundle.min.aio.min.js' | asset_url }}"></script>
<script>
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      init_scroll{{ section.id | replace: "template--", "" }}();
    });
  } else {
    init_scroll{{ section.id | replace: "template--", "" }}();
  }
   function init_scroll{{ section.id | replace: "template--", "" }} (){
         const thumbSwiper_{{ section.id | replace: "template--", "" }} = new Swiper('.section-{{ section.id }}-padding .thumb-swiper', {
                spaceBetween: 0,
                slidesPerView: 3,
                freeMode: true,
                watchSlidesVisibility: true,
                watchSlidesProgress: true
            });

            const mainSwiper_{{ section.id | replace: "template--", "" }} = new Swiper('.section-{{ section.id }}-padding .main-swiper', {
                spaceBetween: 10,
                autoplay: {
                    delay: 2000,
                    disableOnInteraction: true
                },
                thumbs: {
                    swiper: thumbSwiper_{{ section.id | replace: "template--", "" }},
                },
            });
   }
</script>
