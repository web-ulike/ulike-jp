  opacity: 1;
}
.circle-load {
    position: absolute;
    width: 88px;
    height: 88px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
} 

.pd_md5-avtor .circle-load-svg {
    stroke-dasharray: 0 570;
} 
.pd_md5-avtor.swiper-slide-thumb-active .circle-load-svg{
  transition: stroke-dasharray 2s;
  stroke-dasharray: 570 570;
}
.pd_module5-wrapper{
  overflow: hidden;
}
@keyframes rot {
    100% {
        stroke-dasharray: 570 570;
    }
}
/* 定位到屏幕中心 */
