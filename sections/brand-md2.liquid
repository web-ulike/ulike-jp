<style>
/* md2-inner start*/
.md2-inner{
  position: relative;
  padding: 3.73vw 0 27vw 0;
 background: #F8F6F2;
}
.scroll {
    position: absolute;
    right: 3.5vw;
    top: -29.3vw;
  width: 4.5vw;
}
.svroll__inner-cus {
    /* position: relative; */
 width: 4.5vw;
  display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2.66vw;
}
.ver__text-cus {
    font-size: 3.2vw;
      writing-mode: vertical-rl;
    /* transform: rotate(-90deg); */
}
.ver__bar-cus {
    display: block !important;
    width: 0.25px;
    height: 10.6vw;
    background: #3F3636;
    /* position: absolute;
    left: 2.4vw;
    top: 16vw; */
}
.md2-cnt {
  text-align: center;
  position: relative;
}
.md1-txt1{
  color: #3F3636;
font-size: 3.5vw;
font-style: normal;
font-weight: 400;
line-height: 130%;
margin-bottom: 5px;
letter-spacing: 1px;
}
.md1-txt1 strong{
  font-family: var(--font-it-family);
  font-size: 4.8vw;
  font-style: normal;
font-weight: 400;
line-height: 130%;
}
.md1-txt1 em{
  font-style: normal;
font-weight: 400;
line-height: 130%;
  letter-spacing: -4.861px;
}
.md1-txt2{
  color: #E0004D;
text-align: center;
font-size: 10vw;
font-style: normal;
font-weight: 400;
line-height: 100%;
margin-bottom: 3.5vw;
display: flex;
    justify-content: center;
}
.md1-txt2 strong,.md1-txt2 em{
  font-size: 11.2vw;
  font-style: normal;
font-weight: 400;
line-height: 100%;
}
.md1-txt2 em{
    font-family: var(--font-it-family);
}
.md2-cnt svg{
  width: 8vw;
  height: 8vw;
  margin: 0 auto 3.2vw;
}
.md1-txt3{
  margin-top: 1.6vw;
}
.md1-txt4{
  color: #E0004D;
text-align: center;
font-size: 6.1vw;
font-style: normal;
font-weight: 400;
line-height: 100%;
margin-top: 1.3vw;
margin-bottom: 7vw;
}
.md1-box{
  display: flex;
  gap: 7px;
}
.md1-item{
  position: relative;
  border-radius: 20px;
background: #F8F5EF;
padding: 4vw;
text-align: left;
flex: 1;
display: flex;
align-items: center;
}
.md1-fl-img{
  position: absolute;
  top: -8%;
    right: 4%;
  width: 6.13vw;
}
.md1-fl-img img{
  width: 100%;
}
.md2-picture{
  position: absolute;
  width: 100%;
  inset: 0;
}
.md2-picture img{
  width: 100%;
  inset: 0;
  object-fit: cover;
  position: absolute;
  transform: translateY(-32%);
}
.md1-box .md1-item:nth-of-type(2) .md1-fl-img{
  width: 16vw;
    top: 50%;
    transform: translateY(-50%);
    right: 2%;
}
.md1-fl-txt{
  color: #3F3636;
font-size: 3.2vw;
font-style: normal;
font-weight: 400;
line-height: 130%;
width: 30vw;
}
.md1-box .md1-item:nth-of-type(2) .md1-fl-txt{
  width: 22.4vw;
}
  .md1-txt5 {
    font-size: 2.8vw;
    color:#938B82;
    text-align: left;
}
@media only screen and (min-width: 768px) {
  .md2-inner{
    padding: 16px 0 140px 0;
  }
  .md1-txt1 {
    font-size: 18px;
}
.md1-txt1 strong {
    font-size: 24px;
}
.md1-txt2 {
    font-size: 50px;
    margin-bottom: 17px;
}
.md1-txt2 strong,.md1-txt2 em {
    font-size: 56px;
}
.md2-cnt svg{
  width: 40px;
  height: 40px;
  margin-bottom: 13px;
}
.md1-txt4{
    font-size: 30px;
    margin-top: 6px;
    margin-bottom: 35px;
}
.md1-item{
  padding:20px;
}
.md1-fl-txt{
    font-size: 16px;
    width: 160px;
}
.md1-fl-img{
  width: 30px;
}
.md1-box .md1-item:nth-of-type(2) .md1-fl-txt{
  width: 112px;
}
.md1-box .md1-item:nth-of-type(2) .md1-fl-img {
    width: 95px;
}
.scroll {
    position: absolute;
    right: 17px;
    top: -146px;
   width: 22px;
}
.svroll__inner-cus {
 width: 22px;
gap:12px;
}
  
.ver__text-cus {
    font-size: 16px;
}
  
.ver__bar-cus {
    height: 53px;
    /* left: 12px;
    top: 80px; */
}
    .md1-txt5 {
    font-size: 10px;
}
}
/* md2-inner end*/
</style>
  <section>
    <div class="md2-inner">
      <div class="md2-picture to-opacity">
        {%- if section.settings.bg_image -%}
        <img src="{{ section.settings.bg_image | image_url }}" alt="">
         {%- endif -%}
      </div>
      <div class="scroll to-top">
        <div class="svroll__inner-cus">
          <div class="ver__text-cus">{{ section.settings.scroll_txt }}</div>
          <div class="ver__bar-cus"></div>
        </div>
      </div>
      <div class="md2-cnt section__inner">
        <div class="md1-txt1 to-top" style="transition-delay: 10ms;">{{ section.settings.txt_1 }}</div>
        <div class="md1-txt2 to-top" style="transition-delay: 35ms;">{{ section.settings.txt_2 }}</div>
        <svg xmlns="http://www.w3.org/2000/svg" width="63" height="62" viewBox="0 0 63 62" fill="none" class="to-top" style="transition-delay: 70ms;">
          <path d="M62 1L1 61" stroke="#3F3636" stroke-width="2"/>
          <path d="M1 1L62 61" stroke="#3F3636" stroke-width="2"/>
        </svg>
        <div class="md1-txt1 to-top" style="transition-delay: 105ms;"> {{ section.settings.txt_3 }}</div>
        <div class="md1-txt4 to-top" style="transition-delay: .14s;">{{ section.settings.txt_4 }}</div>
        
        <div class="md1-box to-top" style="transition-delay: 175ms;">
          <div class="md1-item">
            <div class="md1-fl-txt">{{ section.settings.left_txt }}</div>
            <div class="md1-fl-img">
               {%- if section.settings.image_left -%}
              <img src="{{ section.settings.image_left | image_url }}" alt="">
                   {%- endif -%}
            </div>
          </div>
          <div class="md1-item">
            <div class="md1-fl-txt">{{ section.settings.right_txt }}</div>
            <div class="md1-fl-img">
                {%- if section.settings.image_right -%}
              <img src="{{ section.settings.image_right | image_url }}" alt="">
                {%- endif -%}
            </div>
          </div>
        </div>
         <div class="md1-txt5 to-top" style="transition-delay: 205ms;">{{ section.settings.txt_5 }}</div>
      </div>
    </div>
  </section>
