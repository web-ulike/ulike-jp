      "label": "Text 2"
    },
    {
      "type": "richtext",
      "id": "txt_3",
      "label": "Text 3"
    },
    {
      "type": "richtext",
      "id": "txt_4",
      "label": "Text 4"
    },
    {
      "type": "richtext",
      "id": "txt_5",
      "label": "Text 5"
    },
 {
          "type": "image_picker",
          "id": "image_left",
          "label": "Images Left"
        },
    {
