<style>
    #shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color.red }}, {{  section.settings.text_color.green }}, {{  section.settings.text_color.blue }};
    --section-background: {{ section.settings.background.red }}, {{ section.settings.background.green }}, {{ section.settings.background.blue }};
    --color-border: 255, 255, 255;
    /* background: rgb(var(--section-background, var(--background))); */
  }
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.6);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
  }
}
.image_with-text-wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: calc(1274 / 1366* 100%);
  margin: 0 auto;
}

.image_with-left{
  width: 40%;
}
.image-with-right{
  width: 50%;
}
.text_right-tle1{
  color: #000;
font-family: var(--font-hd-family);
font-size: 30px;
font-style: normal;
font-weight: 400;
line-height: 170%;
}
.text_right-tle2{
  color: #000;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 220%;
letter-spacing: 0.18px;
margin-top: 30px;
}
.text_right_tle3{
  color: #000;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 220%;
letter-spacing: 0.18px;
margin-top: 0px;
}
.text_right-ico img{
max-width: 219px;
margin-top: 77px;
}
.text_right-note{
  margin-top: 45px;
  color: rgba(0, 0, 0, 0.50);
font-size: 12px;
font-style: normal;
font-weight: 400;
line-height: 180%;
letter-spacing: 0.12px;
}
@media (max-width: 767px){
  .image_with-text-wrapper{
    flex-direction: column;
    align-items: flex-start;
  }
  .image_with-left{
    width: 80%;
    margin-left: -20px;
  }
  .image-with-right{
    width: 75%;
  }
  .text_right-tle1{
    font-size: 20px;
    margin-top: 30px;
    line-height: 130%;
  }
  .text_right-tle2{
    font-size: 12px;
    margin-top: 20px;
    line-height: 185%;
  }
  .text_right_tle3{
    font-size: 13px;
    margin-top: 20px;
    font-weight: 300;
    line-height: 185%;
  }
  .text_right-ico{
    display: none;
  }
  .text_right-note{
    font-size: 10px;
    margin-top: 25px;
  }
}
</style>
 <section>
    <div class="image_with-text-wrapper section-{{ section.id }}-padding">
      <div class="image_with-left to-top">
        <picture>
            {%- if section.settings.image_mobile -%}
           <source
              media="(max-width: 767px)"
              srcset="{{ section.settings.image_mobile | image_url: width: '400x' }} 400w, {{ section.settings.image_mobile | image_url: width: '600x' }} 600w, {{ section.settings.image_mobile | image_url: width: '800x' }} 800w, {{ section.settings.image_mobile | image_url: width: '1000x' }} 1000w"
              width="{{ section.settings.image_mobile.width }}"
              height="{{ section.settings.image_mobile.height }}"
            >
            {%- endif -%}
            {%- if section.settings.image -%}
             {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'eager', sizes: '100vw', widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'trade_banner__image' -}}
            {%- endif -%}
          </picture>
      </div>
      <div class="image-with-right">
        {%- if section.settings.tle_1 != blank -%}
        <div class="text_right-tle1 to-top" style="transition-delay: 0.2s;">
        {{ section.settings.tle_1 }}
        </div>
        {%- endif -%}
        {%- if section.settings.tle_2 != blank -%}
        <div class="text_right-tle2 to-top" style="transition-delay: 0.3s;">
          {{ section.settings.tle_2 }}
        </div>
        {%- endif -%}
         {%- if section.settings.tle_3 != blank -%}
        <div class="text_right_tle3 to-top" style="transition-delay: 0.4s;">
           {{ section.settings.tle_3 }}
        </div>
        {%- endif -%}
        {%- if section.settings.image_logo -%}
        <div class="text_right-ico to-top" style="transition-delay: 0.5s;">
          <img src="{{ section.settings.image_logo | image_url }}" alt="" />
        </div>
        {%- endif -%}
         {%- if section.settings.note != blank -%}
        <div class="text_right-note to-top" style="transition-delay: 0.6s;">
           {{ section.settings.note }}
        </div>
        {%- endif -%}
      </div>
    </div>
  </section>
<script>
</script>
{% schema %}
{
  "name": "Air10 Image With Text",
  "class": "shopify-section--air10-image-with-txet", 
  "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Images"
        },
     {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Images"
        },
    {
      "type": "richtext",
      "id": "tle_1",
      "label": "Text 1"
    },
    {
      "type": "richtext",
      "id": "tle_2",
      "label": "Text 2"
    },
    {
      "type": "richtext",
      "id": "tle_3",
      "label": "Text 3"
    },
 {
          "type": "image_picker",
          "id": "image_logo",
          "label": "Images Logo"
        },
     {
      "type": "richtext",
      "id": "note",
      "label": "Note"
    },
    
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_top.label",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_bottom.label",
      "default": 48
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "Air10 Image With Text"
    }
  ]
}
{% endschema %}