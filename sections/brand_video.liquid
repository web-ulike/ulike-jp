{%- liquid
  assign se_id = section.id
  assign se_bks = section.blocks
  assign se_stts = section.settings
-%}

<div class="container video-block_{{se_id}}">
  {% assign my_array = se_stts.videoid | split: '?v=' %}
  <div class="box-video">
    <div class="title">{{ se_stts.title }}</div>
    <div class="info">
      {{ se_stts.info -}}
    </div>
    {% if se_stts.videoid %}
      <iframe
        width="100%"
        src="https://www.youtube.com/embed/{{ my_array.last}}"
        title="video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    {% else %}
      <div class="video-block_{{se_id}}__video-placeholder">
        <img src="https://cdn.shopify.com/s/files/1/0553/7392/2352/files/2-PC_2.jpg?v=1702280608https://cdn.shopify.com/s/files/1/0553/7392/2352/files/2-PC_2.jpg?v=1702280608">
      </div>
    {% endif %}
  </div>
</div>
<style>
  .video-block_{{se_id}} {
    padding: 80px 0px;
  }
  .video-block_{{se_id}} .title {
    color: #e0004d;
    text-align: center;
    font-family: Noto Sans JP;
    font-size: 40px;
    font-weight: 500;
    text-transform: uppercase;
  }
  .video-block_{{se_id}} .info {
    color: #000;
    text-align: center;
    font-family: Noto Sans JP;
    font-size: 40px;
    font-weight: 500;
    line-height: 36px;
    margin-bottom: 50px;
  }
  .video-block_{{se_id}} iframe {
    height: {{ se_stts.videoHeight }}px;
  }
  @media screen and (max-width: 720px) {
    .video-block_{{se_id}} {
      padding: 24px 0px 0px;
    }
    .video-block_{{se_id}} .title {
      font-size: 22px;
      line-height: 22px;
    }
    .video-block_{{se_id}} .info {
      font-size: 22px;
      margin-bottom: 20px;
      line-height: 26px;
    }
    .video-block_{{se_id}} iframe {
      height: {{ se_stts.mVideoHeight }}px;
    }
  }
</style>
{% schema %}
{
  "name": "brand Video block",
  "class": "s-Video block",
  "settings": [
    {
      "type": "url",
      "id": "videoid",
      "label": "视频链接",
      "info": "E.g: https://www.youtube.com/watch?v=xxxxxxx"
    },
    {
      "type": "number",
      "id": "videoHeight",
      "label": "视频高度",
      "default": 550
    },
    {
      "type": "number",
      "id": "mVideoHeight",
      "label": "移动端视频高度",
      "default": 400
    },
    {
      "type": "text",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "color",
      "id": "f_color",
      "label": "标题颜色"
    },
    {
      "type": "textarea",
      "id": "info",
      "label": "描述"
    },
    {
      "type": "text",
      "id": "btn_name",
      "label": "按钮名称"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "链接"
    },
    {
      "type": "color",
      "id": "b_color",
      "label": "背景颜色"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "brand-Video block",
      "blocks": []
    }
  ]
}
{% endschema %}
