<style>
    #shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color.red }}, {{  section.settings.text_color.green }}, {{  section.settings.text_color.blue }};
    --section-background: {{ section.settings.background.red }}, {{ section.settings.background.green }}, {{ section.settings.background.blue }};
    --color-border: 255, 255, 255;
    /* background: rgb(var(--section-background, var(--background))); */
  }
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.6);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
  }
}
  .new_bix {
    display: flex;
    align-items: center;
    gap: 40px;
}
  .left_ig {
    max-width: 352px;
    flex-shrink: 0;
}
  .point_new_1{
    color:  #E0004D;
font-size: 35.056px;
font-style: normal;
font-weight: 500;
line-height: 130%;
letter-spacing: 3.506px;
  }
  .point_new_1 strong{
    color:  #E0004D;
font-size: 26.424px;
font-style: normal;
font-weight: 500;
line-height: 130%;
letter-spacing: 2.642px;
  }
  .point_new_tle{
    color: rgba(0, 0, 0, 0.80);
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: 150%; /* 27px */
     margin-top:30px;
  }
  .point_new_tle1{
    color: #000;
font-size: 18.613px;
font-style: normal;
font-weight: 400;
line-height: 150%;
     margin-top:30px;
  }
  @media (max-width: 767px){
    .point_new-wrapper{
      background: linear-gradient(180deg, #FFF 0.04%, #F6F2E4 99.96%);
    }
    .new_bix {
      flex-direction: column;
      gap: 20px;
    }
     .left_ig {
    max-width: 181px;
}

 .point_new_1{
font-size: 19.825px;
font-style: normal;
font-weight: 500;
line-height: 130%;
letter-spacing: 1.983px;
  }
  .point_new_1 strong{
color:  #E0004D;
font-size: 14.943px;
font-style: normal;
font-weight: 500;
line-height: 130%;
letter-spacing: 1.494px;
  }
  .point_new_tle{
    color: rgba(0, 0, 0, 0.80);
text-align: center;
font-size: 12px;
font-style: normal;
font-weight: 400;
line-height: 150%; /* 18px */
     margin-top:20px;
  }
  .point_new_tle1{
   color: #000;
font-size: 12px;
font-style: normal;
font-weight: 400;
line-height: 150%; /* 18px */
    margin-top:20px;
  }
.right_bx {
    text-align: center;
}
}
</style>
   <section>
    <div class="point_new-wrapper section-{{ section.id }}-padding">
      <div class="custom_container">
      <div class="new_bix">
         <div class="left_ig to-top">
           <picture>
            {%- if section.settings.image_mobile -%}
           <source
              media="(max-width: 767px)"
              srcset="{{ section.settings.image_mobile | image_url: width: '400x' }} 400w, {{ section.settings.image_mobile | image_url: width: '600x' }} 600w, {{ section.settings.image_mobile | image_url: width: '800x' }} 800w, {{ section.settings.image_mobile | image_url: width: '1000x' }} 1000w"
              width="{{ section.settings.image_mobile.width }}"
              height="{{ section.settings.image_mobile.height }}"
            >
            {%- endif -%}
            {%- if section.settings.image -%}
             {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'eager', sizes: '100vw', widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'trade_banner__image' -}}
            {%- endif -%}
          </picture>
       </div>
        <div class="right_bx">
          {%- if section.settings.tle_1 != blank -%}
            <div class="point_new_1 to-top" style="transition-delay: 0.2s;">
               {{ section.settings.tle_1 }}
            </div>
              {%- endif -%}
            {%- if section.settings.tle_2 != blank -%}
            <div class="point_new_tle to-top" style="transition-delay: 0.3s;">
              {{ section.settings.tle_2 }}
            </div>
            {%- endif -%}
            {%- if section.settings.tle_3 != blank -%}
            <div class="point_new_tle1 to-top" style="transition-delay: 0.4s;">
             {{ section.settings.tle_3 }}
            </div>
            {%- endif -%}
        </div>
      </div>

      </div>
    </div>
  </section>
<script>
</script>
{% schema %}
{
  "name": "Air10 Point Module4",
  "class": "shopify-section--air10-point-module1", 
  "settings": [
    
    {
          "type": "image_picker",
          "id": "image",
          "label": "Images"
        },
     {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Images"
        },
     {
      "type": "richtext",
      "id": "tle_1",
      "label": "Text 1"
    },
    {
      "type": "richtext",
      "id": "tle_2",
      "label": "Text 2"
    },
     {
      "type": "richtext",
      "id": "tle_3",
      "label": "Text 3"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_top.label",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_bottom.label",
      "default": 48
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "Air10 Point Module4"
    }
  ]
}
{% endschema %}