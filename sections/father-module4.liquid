<style>
      #shopify-section-{{ section.id }} {
      --text-color: {{  section.settings.text_color.red }}, {{  section.settings.text_color.green }}, {{  section.settings.text_color.blue }};
      --section-background: {{ section.settings.background.red }}, {{ section.settings.background.green }}, {{ section.settings.background.blue }};
      --color-border: 255, 255, 255;
      /* background: rgb(var(--section-background, var(--background))); */
    }
    .section-{{ section.id }}-padding {
        padding-top: calc({{ section.settings.padding_top }}px);
        padding-bottom: calc({{ section.settings.padding_bottom }}px);
      }
      @media screen and (max-width: 768px){
      .section-{{ section.id }}-padding {
        padding-top: calc({{ section.settings.padding_top }}px * 0.6);
        padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
      }
    }
  /* father-module4 start*/
  .father-module4{
    background: #282A2F;
  }
  .father-md4-box{
    display: flex;
    gap: 34px;
  }
  @media screen and (max-width: 768px){
     .father-md4-box{
      gap: 20px;
      flex-wrap: wrap;
    }
    .father-md4-box .md4_li{
      flex: 46%;
    display: flex;
    align-items: center;
    justify-content: center;
    }
  }
  /* father-module4 end*/
</style>

<section>
  <div class="father-module4 section-{{ section.id }}-padding">
    <div class="father-module-container">
      <div class="father-md4-box">
        {%- for block in section.blocks -%}
          <div class="md4_li to-top" style="transition-delay: 0.{{ forloop.index }}s">
            <picture>
              {%- if block.settings.image_mobile -%}
                <source
                  media="(max-width: 767px)"
                  srcset="{{ block.settings.image_mobile | image_url: width: '400x' }} 400w, {{ block.settings.image_mobile | image_url: width: '600x' }} 600w, {{ block.settings.image_mobile | image_url: width: '800x' }} 800w, {{ block.settings.image_mobile | image_url: width: '1000x' }} 1000w"
                  width="{{ block.settings.image_mobile.width }}"
                  height="{{ block.settings.image_mobile.height }}"
                >
              {%- endif -%}
              {%- if block.settings.image -%}
                {{-
                  block.settings.image
                  | image_url: width: block.settings.image.width
                  | image_tag:
                    loading: 'eager',
                    sizes: '100vw',
                    widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200',
                    class: 'trade_banner__image'
                -}}
              {%- endif -%}
            </picture>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>
<script></script>
{% schema %}
{
  "name": "Father Module4",
  "class": "shopify-section--father-Module4",
  "settings": [
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_top.label",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_bottom.label",
      "default": 48
    }
  ],
  "blocks": [
            {
        "type": "item",
        "name": "item",
        "settings": [
           {
          "type": "image_picker",
          "id": "image",
          "label": "Images"
        },
     {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Images"
        },
           {
      "type": "richtext",
      "id": "tle",
      "label": "Text"
    }
        ]
      }
  ],
  "presets": [
    {
      "name": "Father Module4"
    }
  ]
}
{% endschema %}
