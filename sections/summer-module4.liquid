<style>
  /* number_two-box */
    #shopify-section-{{ section.id }} {
      --text-color: {{  section.settings.text_color.red }}, {{  section.settings.text_color.green }}, {{  section.settings.text_color.blue }};
      --section-background: {{ section.settings.background.red }}, {{ section.settings.background.green }}, {{ section.settings.background.blue }};
      --color-border: 255, 255, 255;
      {% if section.settings.bg_image %}
        background: url({{ section.settings.bg_image | image_url }}) no-repeat center;
      {% else %}
        background: rgb(var(--section-background));
      {% endif %}
      background-size: cover;
    }
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px);
      padding-bottom: calc({{ section.settings.padding_bottom }}px);
    }
    @media screen and (max-width: 768px){
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * 0.6);
      padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.6);
    }
      #shopify-section-{{ section.id }} {
        {% if section.settings.bg_image_mobile %}
        background: url({{ section.settings.bg_image_mobile | image_url }}) no-repeat center;
      {% else %}
        background: rgb(var(--section-background));
      {% endif %}
    }
  }
  .number_do_box{
    max-width: 1180px;
    width: 100%;
    margin: 0 auto;
    padding: 0 40px;
    text-align: center;
  }
  .number_do_box img{
    width: 100%;
  }
  .number_do_box h3{
    color: #5B7C9D;
  text-align: center;
   font-family: var(--font-hd-family);
  font-size: 50px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  margin-bottom: 20px;
  }
  .fo_txt {
    color: #000;
  text-align: center;
  font-size: 28px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  margin-bottom: 88px;
  }
  .father_md4 h3{
    color: #FFF;
  text-align: center;
  font-family: var(--font-body-family);
  font-size: 30px;
  font-style: normal;
  font-weight: 400;
  line-height: 1.5;
  letter-spacing: 0.6px;
  margin-bottom:40px;
  }
  @media (max-width: 768px) {
    .number_do_box h3{
      font-size: 20px;
      margin-bottom: 5px;
    }
    .fo_txt{
      font-size: 14px;
      margin-bottom: 20px;
    }
     .father_md4 h3{
  font-size: 18px;
  margin-bottom:20px;
  }
  }
</style>
<section class="section-{{ section.id }}-padding">
  <div class="number_do_box{% if section.settings.custom_class != blank %} {{section.settings.custom_class}}{% endif %}">
    <h3 class="to-top" style="transition-delay: 0.1s;">{{ section.settings.tle }}</h3>
    {%- if section.settings.sub_tle != blank -%}
      <div class="fo_txt to-top" style="transition-delay: 0.2s;">{{ section.settings.sub_tle }}</div>
    {%- endif -%}
    <picture class="to-top" style="transition-delay: 0.3s;">
      {%- if section.settings.image_mobile -%}
        <source
          media="(max-width: 767px)"
          srcset="{{ section.settings.image_mobile | image_url: width: '400x' }} 400w, {{ section.settings.image_mobile | image_url: width: '600x' }} 600w, {{ section.settings.image_mobile | image_url: width: '800x' }} 800w, {{ section.settings.image_mobile | image_url: width: '1000x' }} 1000w"
          width="{{ section.settings.image_mobile.width }}"
          height="{{ section.settings.image_mobile.height }}"
        >
      {%- endif -%}
      {%- if section.settings.image -%}
        {{-
          section.settings.image
          | image_url: width: section.settings.image.width
          | image_tag:
            loading: 'eager',
            sizes: '100vw',
            widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200',
            class: ''
        -}}
      {%- endif -%}
    </picture>
  </div>
</section>
<script></script>
{% schema %}
{
  "name": "Summer Module4",
  "class": "shopify-section--summer-module4",
  "settings": [
     {
      "type": "text",
      "id": "custom_class",
      "label": "Custom Class"
    },
      {
      "type": "text",
      "id": "tle",
      "label": "Title"
    },
      {
      "type": "richtext",
      "id": "sub_tle",
      "label": "subTitle"
    },
     {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background Images"
        },
     {
          "type": "image_picker",
          "id": "bg_image_mobile",
          "label": "Mobile Background Images"
        },
     {
          "type": "image_picker",
          "id": "image",
          "label": "Images"
        },
     {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Images"
        },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "rgba(0,0,0,0)"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_top.label",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_bottom.label",
      "default": 48
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "Summer Module4"
    }
  ]
}
{% endschema %}
