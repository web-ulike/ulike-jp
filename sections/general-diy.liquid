<style>
  #shopify-section-{{ section.id }} {
   --text-color: {{ section.settings.text_color.red }}, {{ section.settings.text_color.green }}, {{ section.settings.text_color.blue }};
  }
.general-diy {
    padding: 80px 0 150px 0;
    position: relative;
}

.general-diy .general-diy-img {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 0;
    display: block;
}

.general-diy .general-diy-mb {
    display: none;
}

.general-diy .container {
    position: relative;
    z-index: 3;
}


.general-diy .general-diy-title {
    font-size: 52px;
    color: rgb(var(--text-color));
    line-height: 1.3;
    font-weight: bold;
    text-align: center;
}

.general-diy .general-diy-p {
    position: relative;
    max-width: 850px;
    margin: 0 auto;
    line-height: 1.4;
    font-size: 20px;
    font-weight: 300;
    color: #040000;
    text-align: center;
    padding: 0 26px;
    margin-top: 40px;
}

.general-diy .general-diy-p p{
  margin: 0;
}

.general-diy .general-diy-p img {
    position: absolute;
    display: block;
    width: 54px;
    top: 0;
    z-index: 0;
}

.general-diy .general-diy-p .general-diy-left {
    left: 0;
}

.general-diy .general-diy-p .general-diy-right {
    right: 0;
    transform: scale(-1, 1);
}

@media (max-width:1300px) {
    .general-diy {
        padding-bottom: 200px;
    }
}

@media (max-width:850px) {
    .general-diy {
        padding-top: 35px;
        padding-bottom: 60px;
    }

    .general-diy .general-diy-title {
        font-size: 35px;
    }

    .general-diy .general-diy-p {
        font-size: 18px;
    }

    .general-diy .general-diy-mb {
        display: block;
    }

    .general-diy .general-diy-pc {
        display: none;
    }
}

@media (max-width:720px) {
    .general-diy {
        padding-top: 35px;
        padding-bottom: 60px;
    }

    .general-diy .general-diy-title {
        font-size: 24px;
    }

    .general-diy .general-diy-p {
        font-size: 12px;
        padding: 0 40px;
        margin-top: 14px;
    }

    .general-diy .general-diy-p img {
        width: 25px;
    }
}

@media (max-width:640px) {
    .general-diy {
        padding-bottom: 50px;
    }
}

</style>
<section class="general-section">
  <div class="general-diy">
    <div class="container">
        <div class="general-diy-title">{{ section.settings.title }}</div>
        <div class="general-diy-p">
          {%- if section.settings.icon != blank -%}
              <img loading="lazy" class="general-diy-left" {% render 'image-attributes', image: section.settings.icon %}>
          {%- endif -%}
          {%- if section.settings.icon != blank -%}
              <img loading="lazy" class="general-diy-right" {% render 'image-attributes', image: section.settings.icon %}>
          {%- endif -%}
            {{ section.settings.text }}
        </div>
    </div>
    {%- if section.settings.background != blank -%}
        <img loading="lazy" class="general-diy-pc general-diy-img" {% render 'image-attributes', image: section.settings.background %}>
    {%- endif -%}
    {%- if section.settings.background_mobile != blank -%}
        <img loading="lazy" class="general-diy-mb general-diy-img" {% render 'image-attributes', image: section.settings.background_mobile %}>
    {%- endif -%}
  </div>
</section>
{% schema %}
{
  "name": "general-diy",
  "class": "general",
  "blocks": [],
  "settings": [
      {
        "type": "image_picker",
        "id": "background",
        "label": "Background"
      },
      {
          "type": "image_picker",
          "id": "background_mobile",
          "label": "Mobile background"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "header",
          "content": "Colors"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text",
          "default": "#040000"
        }
  ],
  "presets": [
    {
      "name": "general-diy",
      "blocks": []
    }
  ]
}
{% endschema %}