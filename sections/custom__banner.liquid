<style>
   {%- assign text_position = section.settings.text_position | split: '_' | first -%}
   {%- case text_position -%}
      {%- when 'top' -%}
        {%- assign section_items_alignment = 'flex-start' -%}
      {%- when 'middle' -%}
        {%- assign section_items_alignment = 'center' -%}
      {%- when 'bottom' -%}
        {%- assign section_items_alignment = 'flex-end' -%}
    {%- endcase -%}

  {%- assign mobile_text_position = section.settings.mobile_text_position | split: '_' | first -%}
   {%- case mobile_text_position -%}
      {%- when 'top' -%}
        {%- assign mobile_section_items_alignment = 'flex-start' -%}
      {%- when 'middle' -%}
        {%- assign mobile_section_items_alignment = 'center' -%}
      {%- when 'bottom' -%}
        {%- assign mobile_section_items_alignment = 'flex-end' -%}
    {%- endcase -%}

    #shopify-section-{{ section.id }} {
    --heading-color: {{ section.settings.text_color.red }}, {{ section.settings.text_color.green }}, {{ section.settings.text_color.blue }};
    --text-color: {{ section.settings.text_color.red }}, {{ section.settings.text_color.green }}, {{ section.settings.text_color.blue }};
      --section-blocks-alignment: {{ section_items_alignment }};
       --mobile-section-blocks-alignment: {{ mobile_section_items_alignment }};
      --tle-size: calc({{ section.settings.tle_size}}px);
       --mobile-tle-size: calc({{ section.settings.mobile_tle_size}}px);
      --txt-left: calc({{ section.settings.sub_tle_left}}px);
      --mobile-txt-left: calc({{ section.settings.mobile_sub_tle_left}}px);
  }
.content-box {
  z-index: 1;
  position: relative;
}

.content-box--text-center {
  text-align: center;
}

.content-box--text-right {
  text-align: end;
}

.w100{
  width:100%;
}
@media screen and (max-width: 740px) {
  .mobile-content-box--left {
    margin-inline-end: 0;
  }

  .mobile-content-box--right {
    margin-inline-start: 0;
  }
  .mobile-content-box--text-center {
  text-align: center;
}

.mobile-content-box--text-right {
  text-align: end;
}
}

@media screen and (min-width: 741px) {
  .content-box {
    width: 520px;
    margin-inline-start: auto;
    margin-inline-end: auto;
  }

  .content-box--medium {
    width: 520px;
  }

  .content-box--small {
    width: 520px;
  }

  .content-box--fill {
    width: 100% !important;
  }

  .content-box--left {
    margin-inline-start: 0;
  }

  .content-box--right {
    margin-inline-end: 0;
  }
}

@media screen and (min-width: 1000px) {
  .content-box {
    width: 520px;
  }

  .content-box--medium {
    width: 520px;
  }

  .content-box--small {
    width: 520px;
  }
}

@media screen and (min-width: 1400px) {
  .content-box--small {
    width: 520px;
  }
}
  
   
