  }
  @media (max-width: 768px) {
     .kv_content {
      align-items: var(--mobile-section-blocks-alignment);
  }
    .top_bix h1{
      font-size: var(--mobile-tle-size);;
    }
    .kv_txt{
      font-size: 12px;
          margin-top: 20px;
