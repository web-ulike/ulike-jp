<style>

#shopify-section-{{ section.id }} {
    --text-color: {{  section.settings.text_color.red }}, {{  section.settings.text_color.green }}, {{  section.settings.text_color.blue }};
    --color-border: 255, 255, 255;
    --section-background: {{ section.settings.background }};
  background: var(--section-background); 
  }
     .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px);
    padding-bottom: calc({{ section.settings.padding_bottom }}px);
  }
  @media screen and (max-width: 768px){
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.mobile_padding_top }}px);
    padding-bottom: calc({{ section.settings.mobile_padding_bottom }}px );
  }
}
.main-img{
      text-align: center;
    }
     .main-img h3{
      color: #000;
      font-size: 36px;
      font-style: normal;
      font-weight: 500;
      line-height: normal;
      margin-bottom: 17px;
     }
     .main-img .main__img-txt{
      color: #000;
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%;
      max-width: 1078px;
      margin: 0 auto 52px;
     }
  picture{
    display:block;
  }
     @media screen and (max-width: 768px) {
      .main-img h3{
        font-size: 24px;
        margin-bottom: 10px;
      }
      .main-img .main__img-txt{
        font-size: 16px;
        margin-bottom: 20px;
        text-align: left;
      }
      .main-img picture{
        margin: 0 -20px;
      }
     }
</style>
 <section class="section-{{ section.id }}-padding">
<div class="main-img">
          <div class="jp-container">
            <h3 class="to-top">{{ section.settings.tle }}</h3>
            <div class="main__img-txt to-top">{{ section.settings.des }}</div>
              {%- if section.settings.image -%}
            <picture class="to-top">
             {%- if section.settings.image_mobile -%}
                  <source media="(max-width: 767px)" srcset="{{ section.settings.image_mobile | image_url }}">
                       {%- endif -%}
                   {%- if section.settings.image -%}
                  <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.image.alt }}">
                  {%- endif -%}
            </picture>
             {%- endif -%}
             {%- if section.settings.video != blank -%}
  
    <div class="main-img-video to-top">
       {%- assign video_url = section.settings.video -%}
    {{- video_url | video_tag: controls: false, autoplay: true, playsinline: true, muted: true, loop: true -}}
    </div>
 {%- endif -%}
          </div>
        </div>
  </section>
<script>
</script>
{% schema %}
{
  "name": "about-main-img",
  "class": "about-main-img", 
  "settings": [
     {
          "type": "image_picker",
          "id": "image",
          "label": "Images"
        },
     {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Images"
        },
           {
      "type": "text",
      "id": "tle",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "des",
      "label": "Descripte"
    },
         {
      "type": "richtext",
      "id": "note",
      "label": "Note"
    },
         {
      "type": "video",
      "id": "video",
      "label": "Video",
      "info": "Replaces the external video if both are set."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "#fff"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_top.label",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.global.settings.padding_bottom.label",
      "default": 48
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile Padding Top",
      "default": 10
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile Padding Bottom",
      "default": 10
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "about-main-img"
    }
  ]
}
{% endschema %}