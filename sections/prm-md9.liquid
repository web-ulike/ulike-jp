<style>
  .prmd5-cnt{
        position: absolute;
    width: 100%;
    height: 100%;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index: 1;
  }
.prmd5_two-txt{
      display: flex;
    font-family: var(--font-it-family);
    color: #FFF;
    text-align: center;
    font-size: 25.1vw;
    font-style: normal;
    font-weight: 700;
    line-height: 0.73;
    letter-spacing: 1.828vw;
    text-transform: uppercase;
}
  .prmd5_two-txt1{
     font-size:22.5vw;
       letter-spacing: 1.464vw;
  }
  @media only screen and (min-width: 768px) {
    .prmd5_two-txt{
    font-size: 125px;
    letter-spacing: 9.14px;
    }
    .prmd5_two-txt1{
     font-size:112.5px;
       letter-spacing: 7.32px
  }
  }
</style>
  <section>
    <div class="prmd5__inner">
      
   <div class="prmd5-top-two">
        <div class="prmd5-cnt">
          <div class="prmd5_two-txt to-right-text"><p>{{ section.settings.txt }}</p></div>
          <div class="prmd5_two-txt prmd5_two-txt1 to-left-text"><p>{{ section.settings.txt1 }}</p></div>
        </div>
        <div class="prmd5-two-img scale_img">
          {%- if section.settings.image -%}
         <img src="{{ section.settings.image | image_url }}" alt="">
        {%- endif -%}
        </div>
      </div>
     
    </div>
  </section>
{% schema %}
{
  "name": "Prm Md9",
  "class": "shopify-section--Prm-md9", 
  "settings": [
     {
      "type": "text",
      "id": "txt",
      "label": "Text"
    },
     {
      "type": "text",
      "id": "txt1",
      "label": "Text1"
    },
    {
          "type": "image_picker",
          "id": "image",
          "label": "Images"
        }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "Prm Md9"
    }
  ]
}
{% endschema %}